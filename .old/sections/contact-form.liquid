{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  
  /* MINIMAL CONTACT FORM - YEEZY/BALENCIAGA INSPIRED */
  .minimal-contact-section {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 60vh;
  }
  
  .minimal-contact-wrapper {
    width: 100%;
    max-width: 480px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .minimal-contact-title {
    text-align: center;
    font-size: clamp(28px, 5vw, 40px);
    font-weight: 400;
    letter-spacing: 2px;
    text-transform: uppercase;
    margin-bottom: 60px;
    color: #000;
  }
  
  .minimal-contact-form {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  
  /* Form Fields */
  .minimal-form-field {
    display: flex;
    flex-direction: column;
    width: 100%;
  }
  
  .minimal-form-field input,
  .minimal-form-field textarea {
    width: 100%;
    padding: 14px 16px;
    font-size: 14px;
    font-weight: 400;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    border: 1px solid {{ section.settings.field_border_color }};
    border-radius: 0;
    background: {{ section.settings.field_bg_color }};
    color: {{ section.settings.field_text_color }};
    transition: all 0.3s ease;
    outline: none;
  }
  
  .minimal-form-field input::placeholder,
  .minimal-form-field textarea::placeholder {
    color: {{ section.settings.field_placeholder_color }};
    text-transform: uppercase;
    font-size: 13px;
    letter-spacing: 0.5px;
  }
  
  .minimal-form-field input:focus,
  .minimal-form-field textarea:focus {
    border-color: {{ section.settings.field_text_color }};
    background: rgba(0, 0, 0, 0.02);
  }
  
  .minimal-form-field textarea {
    min-height: 160px;
    resize: vertical;
    font-family: inherit;
  }
  
  /* Labels - Hidden but accessible */
  .minimal-form-label {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
  
  /* Submit Button */
  .minimal-form-submit {
    margin-top: 10px;
  }
  
  .minimal-submit-btn {
    width: 100%;
    padding: 16px 24px;
    font-size: 14px;
    font-weight: 600;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    border: 2px solid {{ section.settings.button_border_color }};
    background: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    cursor: pointer;
    transition: all 0.3s ease;
    border-radius: 0;
  }
  
  .minimal-submit-btn:hover {
    background: {{ section.settings.button_hover_bg_color }};
    color: {{ section.settings.button_hover_text_color }};
    border-color: {{ section.settings.button_hover_border_color }};
  }
  
  /* Success Message */
  .minimal-form-success {
    text-align: center;
    padding: 30px 20px;
    margin-bottom: 30px;
    border: 1px solid #ccc;
    background: rgba(0, 0, 0, 0.05);
  }
  
  .minimal-form-success h2 {
    font-size: 16px;
    font-weight: 400;
    letter-spacing: 1px;
    text-transform: uppercase;
    color: #000;
    margin: 0;
  }
  
  /* Error Messages */
  .minimal-form-error {
    text-align: center;
    padding: 20px;
    margin-bottom: 30px;
    border: 1px solid #ccc;
    background: rgba(0, 0, 0, 0.05);
  }
  
  .minimal-form-error h2 {
    font-size: 14px;
    font-weight: 400;
    letter-spacing: 1px;
    text-transform: uppercase;
    color: #000;
    margin: 0 0 10px 0;
  }
  
  .minimal-error-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .minimal-error-list li {
    font-size: 12px;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    margin-bottom: 5px;
  }
  
  .minimal-error-list a {
    color: #000;
    text-decoration: none;
  }
  
  .minimal-error-list a:hover {
    text-decoration: underline;
  }
  
  .minimal-field-error {
    font-size: 11px;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    color: #000;
    margin-top: 5px;
  }
  
  /* Responsive */
  @media screen and (max-width: 749px) {
    .minimal-contact-title {
      font-size: 24px;
      margin-bottom: 40px;
    }
    
    .minimal-form-field input,
    .minimal-form-field textarea {
      padding: 12px 14px;
      font-size: 13px;
    }
    
    .minimal-submit-btn {
      padding: 14px 20px;
      font-size: 13px;
    }
  }
{%- endstyle -%}

<div class="minimal-contact-section section-{{ section.id }}-padding">
  <div class="minimal-contact-wrapper">
    {%- if section.settings.heading != blank -%}
      <h1 class="minimal-contact-title">
        {{ section.settings.heading | escape }}
      </h1>
    {%- else -%}
      <h1 class="minimal-contact-title">Contact</h1>
    {%- endif -%}
    
    {%- form 'contact', id: 'ContactForm', class: 'minimal-contact-form' -%}
      {%- if form.posted_successfully? -%}
        <div class="minimal-form-success" tabindex="-1" autofocus>
          <h2>Message Sent Successfully</h2>
        </div>
      {%- elsif form.errors -%}
        <div class="minimal-form-error">
          <h2 role="alert" tabindex="-1" autofocus>
            There was an error with your submission
          </h2>
          <ul class="minimal-error-list" role="list">
            <li>
              <a href="#ContactForm-email">
                {{ form.errors.translated_fields.email | capitalize }}
                {{ form.errors.messages.email }}
              </a>
            </li>
          </ul>
        </div>
      {%- endif -%}
      
      <div class="minimal-form-field">
        <label class="minimal-form-label" for="ContactForm-name">Name</label>
        <input
          type="text"
          id="ContactForm-name"
          name="contact[{{ 'templates.contact.form.name' | t }}]"
          value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
          placeholder="Name"
          autocomplete="name"
          required
        >
      </div>
      
      <div class="minimal-form-field">
        <label class="minimal-form-label" for="ContactForm-email">Email *</label>
        <input
          type="email"
          id="ContactForm-email"
          name="contact[email]"
          value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
          placeholder="Email *"
          autocomplete="email"
          spellcheck="false"
          autocapitalize="off"
          aria-required="true"
          {% if form.errors contains 'email' %}
            aria-invalid="true"
            aria-describedby="ContactForm-email-error"
          {% endif %}
          required
        >
        {%- if form.errors contains 'email' -%}
          <small class="minimal-field-error" id="ContactForm-email-error">
            <span class="visually-hidden">Error:</span>
            {{ form.errors.translated_fields.email | capitalize }}
            {{ form.errors.messages.email }}
          </small>
        {%- endif -%}
      </div>
      
      <div class="minimal-form-field">
        <label class="minimal-form-label" for="ContactForm-phone">Phone</label>
        <input
          type="tel"
          id="ContactForm-phone"
          name="contact[{{ 'templates.contact.form.phone' | t }}]"
          value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
          placeholder="Phone"
          autocomplete="tel"
        >
      </div>
      
      <div class="minimal-form-field">
        <label class="minimal-form-label" for="ContactForm-body">Message</label>
        <textarea
          id="ContactForm-body"
          name="contact[{{ 'templates.contact.form.comment' | t }}]"
          placeholder="Message"
          rows="8"
          required
        >{{ form.body }}</textarea>
      </div>
      
      <div class="minimal-form-submit">
        <button type="submit" class="minimal-submit-btn">
          Send Message
        </button>
      </div>
    {%- endform -%}
  </div>
</div>

