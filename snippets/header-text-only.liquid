    font-weight: 700 !important;
    text-transform: uppercase;
    letter-spacing: var(--text-only-logo-letter-spacing) !important;
    color: var(--text-only-logo-text-color) !important;
    margin: 0;
    {%- if logo_font -%}
    font-family: {{ logo_font.family }}, {{ logo_font.fallback_families }};
    font-weight: {{ logo_font.weight }};
    {%- endif -%}
  }

  .text-only-logo-wrapper img {
    max-width: 100%;
    object-fit: var(--text-only-logo-object-fit);
    height: auto;
  }

  .text-only-header-menu {
    grid-column: 1;
    display: flex;
    gap: calc(1.5625rem * var(--text-only-spacing-scale));
    align-items: center;
    justify-self: start;
  }

  .text-only-header-menu .text-only-menu-item {
    position: relative;
  }

  /* Desktop: minimal dropdown */
  @media screen and (min-width: 640px) {
    .text-only-has-children {
      position: relative;
    }
  }

  /* Mobile: accordion style */
  @media screen and (max-width: 639px) {
    .text-only-has-children {
      display: flex;
      flex-direction: column;
    }
  }

  .text-only-header-menu .text-only-menu-link {
    text-transform: uppercase;
    font-weight: var(--text-only-menu-font-weight) !important;
    letter-spacing: var(--text-only-menu-letter-spacing) !important;
    color: var(--text-only-menu-text-color) !important;
    text-decoration: none;
    transition: opacity 0.2s ease;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 8px;
    {%- if menu_font -%}
    font-family: {{ menu_font.family }}, {{ menu_font.fallback_families }};
    font-weight: {{ menu_font.weight }};
    {%- endif -%}
  }

  .text-only-header-menu .text-only-menu-link:hover {
    opacity: 0.6;
  }

  .text-only-right-nav {
    grid-column: 3;
    display: flex;
    gap: calc(1.5625rem * var(--text-only-spacing-scale));
    align-items: center;
    justify-self: end;
  }

  .text-only-right-nav a,
  .text-only-right-nav a span,
  #TextOnlyCartCount {
    text-transform: uppercase;
    font-weight: var(--text-only-menu-font-weight) !important;
    letter-spacing: var(--text-only-menu-letter-spacing) !important;
    color: var(--text-only-cart-text-color) !important;
    text-decoration: none;
    transition: opacity 0.2s ease;
    white-space: nowrap;
    {%- if menu_font -%}
    font-family: {{ menu_font.family }}, {{ menu_font.fallback_families }};
    font-weight: {{ menu_font.weight }};
    {%- endif -%}
  }

  .text-only-right-nav a:hover {
    opacity: 0.6;
  }

  .text-only-submenu {
    display: none;
    flex-direction: column;
  }

  /* Desktop dropdown styling */
  @media screen and (min-width: 640px) {
    .text-only-submenu {
      position: absolute;
      top: 100%;
      left: 0;
      background: rgb(var(--color-background));
      padding: 8px 0;
      margin-top: 8px;
      min-width: 160px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.08);
      border: 1px solid rgba(var(--color-foreground), 0.1);
      z-index: 100;
    }

    .text-only-has-children:hover .text-only-submenu {
      display: flex;
    }

    .text-only-submenu a {
      padding: 8px 16px;
    }
  }

  /* Mobile accordion styling */
  @media screen and (max-width: 639px) {
    .text-only-submenu {
      padding: 10px 0 0 0;
      gap: 8px;
    }

    .text-only-has-children.active .text-only-submenu {
      display: flex;
    }
  }

  .text-only-submenu a {
    display: block;
    text-decoration: none;
    font-size: calc(var(--text-only-menu-font-size) - 1px) !important;
    color: var(--text-only-menu-text-color) !important;
    text-transform: uppercase;
    font-weight: var(--text-only-menu-font-weight) !important;
    letter-spacing: var(--text-only-menu-letter-spacing) !important;
    transition: opacity 0.15s ease;
    white-space: nowrap;
  }

  .text-only-submenu a:hover {
    opacity: 0.6;
  }

  /* Desktop: plus icon */
  @media screen and (min-width: 640px) {
    .text-only-has-children > .text-only-menu-link::after {
      content: '+';
      font-size: 12px;
      font-weight: 300;
      margin-left: 3px;
      line-height: 1;
    }

    .text-only-has-children:hover > .text-only-menu-link::after {
      content: 'âˆ’';
    }
  }

