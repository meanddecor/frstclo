<style>
  :root {
    /* Header Layout & Positioning */
    --text-only-header-bg-color: {{ section.settings.text_only_header_bg_color | default: 'rgba(0,0,0,0)' }};
    --text-only-position-type: {{ section.settings.text_only_position_type | default: 'relative' }};
    --text-only-position-top: {{ section.settings.text_only_position_top | default: 0 }}px;
    --text-only-position-left: {{ section.settings.text_only_position_left | default: 0 }}px;
    --text-only-position-right: {{ section.settings.text_only_position_right | default: 0 }}px;
    --text-only-z-index: {{ section.settings.text_only_z_index | default: 100 }};
    
    /* Header Dimensions */
    {%- liquid
      assign width_type = section.settings.text_only_width_type | default: 'full'
      assign width_value = section.settings.text_only_width_value | default: 100
      
      case width_type
        when 'full'
          assign width_output = '100%'
        when 'vw'
          assign width_output = width_value | append: 'vw'
        when 'px'
          assign width_output = width_value | append: 'px'
        when 'max-width'
          assign width_output = '100%'
      endcase
      
      assign height_type = section.settings.text_only_height_type | default: 'auto'
      assign height_value = section.settings.text_only_height_value | default: 80
      
      case height_type
        when 'auto'
          assign height_output = 'auto'
        when 'vh'
          assign height_output = height_value | append: 'vh'
        when 'px'
          assign height_output = height_value | append: 'px'
      endcase
    -%}
    --text-only-width: {{ width_output }};
    --text-only-height: {{ height_output }};
    --text-only-use-max-width: {% if width_type == 'max-width' %}1{% else %}0{% endif %};
    
    /* Header Padding */
    --text-only-padding-top: {{ section.settings.text_only_padding_top | default: 20 }}px;
    --text-only-padding-bottom: {{ section.settings.text_only_padding_bottom | default: 20 }}px;
    --text-only-padding-left: {{ section.settings.text_only_padding_left | default: 20 }}px;
    --text-only-padding-right: {{ section.settings.text_only_padding_right | default: 20 }}px;
    
    /* Content Scaling */
    --text-only-content-scale: {{ section.settings.text_only_content_scale | default: 100 | divided_by: 100.0 }};
    --text-only-center-vertically: {% if section.settings.text_only_center_content_vertically %}center{% else %}stretch{% endif %};
    
    /* Logo & Typography */
    --text-only-logo-width: {{ section.settings.text_only_logo_width | default: 100 }}px;
    --text-only-logo-object-fit: {{ section.settings.text_only_logo_object_fit | default: 'contain' }};
    --text-only-burger-color: {{ section.settings.text_only_burger_color | default: '#000000' }};
    --text-only-cross-color: {{ section.settings.text_only_cross_color | default: '#000000' }};
    --text-only-menu-text-color: {{ section.settings.text_only_menu_text_color | default: '#000000' }};
    --text-only-cart-text-color: {{ section.settings.text_only_cart_text_color | default: '#000000' }};
    --text-only-menu-font-size: {{ section.settings.text_only_menu_font_size | default: 11 }}px;
    --text-only-menu-letter-spacing: {{ section.settings.text_only_menu_letter_spacing | default: 0.8 }}px;
    --text-only-menu-font-weight: {{ section.settings.text_only_menu_font_weight | default: 700 }};
    --text-only-logo-text-color: {{ section.settings.text_only_logo_text_color | default: '#000000' }};
    --text-only-logo-font-size: {{ section.settings.text_only_logo_font_size | default: 24 }}px;
    --text-only-logo-letter-spacing: {{ section.settings.text_only_logo_letter_spacing | default: 1.5 }}px;
    --text-only-mobile-menu-bg: {{ section.settings.text_only_mobile_menu_bg | default: '#000000' }};
    --text-only-mobile-menu-text-color: {{ section.settings.text_only_mobile_menu_text_color | default: '#ffffff' }};
    --text-only-mobile-menu-font-size: {{ section.settings.text_only_mobile_menu_font_size | default: 18 }}px;
    --text-only-mobile-menu-letter-spacing: {{ section.settings.text_only_mobile_menu_letter_spacing | default: 0.8 }}px;
    --text-only-mobile-menu-font-weight: {{ section.settings.text_only_mobile_menu_font_weight | default: 700 }};
    --text-only-spacing-scale: {{ section.settings.text_only_spacing_scale | default: 100 | divided_by: 100.0 }};
  }
  
  /* Apply header positioning and dimensions */
  .header--text-only {
    position: var(--text-only-position-type) !important;
    top: var(--text-only-position-top) !important;
    left: var(--text-only-position-left) !important;
    right: var(--text-only-position-right) !important;
    z-index: var(--text-only-z-index) !important;
    width: var(--text-only-width) !important;
    height: var(--text-only-height) !important;
    background-color: var(--text-only-header-bg-color) !important;
    padding: 0 !important;
    margin: 0 !important;
    box-sizing: border-box !important;
  }

  {%- liquid
    assign mobile_menu_style = section.settings.text_only_mobile_menu_style | default: 'fullscreen'
    assign show_scroll_fade = section.settings.text_only_show_scroll_fade
    assign scroll_snap = section.settings.text_only_scroll_snap
  -%}

  .text-only-header-wrapper {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: var(--text-only-center-vertically);
    gap: calc(1.25rem * var(--text-only-spacing-scale));
    padding: var(--text-only-padding-top) var(--text-only-padding-right) var(--text-only-padding-bottom) var(--text-only-padding-left);
    box-sizing: border-box;
    transform: scale(var(--text-only-content-scale));
    transform-origin: center center;
    width: calc(100% / var(--text-only-content-scale));
    height: calc(100% / var(--text-only-content-scale));
  }

  /* XL Desktop - 1200px and above */
  @media screen and (min-width: 1200px) {
    .text-only-header-wrapper {
      max-width: {{ section.settings.text_only_xl_max_width | default: 1600 }}px;
      margin: 0 auto;
    }
    
    .text-only-logo-wrapper .h2,
    .text-only-logo-wrapper span {
      font-size: var(--text-only-logo-font-size) !important;
    }
    
    .text-only-logo-wrapper img {
      width: var(--text-only-logo-width);
    }
    
    .text-only-header-menu .text-only-menu-link,
    .text-only-right-nav a,
    .text-only-right-nav a span,
    #TextOnlyCartCount {
      font-size: var(--text-only-menu-font-size) !important;
    }
  }

