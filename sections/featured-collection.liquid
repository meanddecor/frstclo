          "label": "Portrait"
        },
        {
          "value": "square",
          "label": "Square"
        }
      ],
      "default": "square",
      "label": "Product Image Ratio"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "default": true,
      "label": "Show Second Image on Hover"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "Display Brand Name"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "default": false,
      "label": "Display Product Ratings",
      "info": "Requires product review app to be installed"
    },
    {
      "type": "checkbox",
      "id": "enable_quick_add",
      "default": false,
