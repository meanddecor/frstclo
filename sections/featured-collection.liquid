{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  {%- if section.settings.heading_color != blank -%}
  .section-{{ section.id }}-padding .collection__title .title {
    color: {{ section.settings.heading_color }} !important;
  }
  {%- endif -%}

  {%- liquid
    assign glow_enabled = section.settings.enable_product_card_glow
    assign glow_color = section.settings.product_card_glow_color
  -%}

  {%- if glow_enabled and glow_color != blank -%}
    #Slider-{{ section.id }} .card { box-shadow: none; }
    #Slider-{{ section.id }} .card.gradient {
      --product-card-shadow-visible: 1;
      --product-card-shadow-opacity: {{ section.settings.product_card_glow_opacity | divided_by: 100.0 }};
      --product-card-shadow-horizontal-offset: 0rem;
      --product-card-shadow-vertical-offset: 0rem;
      --product-card-shadow-blur-radius: {{ section.settings.product_card_glow_size | divided_by: 10.0 }}rem;
      --color-shadow: {{ glow_color.red }}, {{ glow_color.green }}, {{ glow_color.blue }};
    }
    #Slider-{{ section.id }} .card.card--standard .card__inner:after,
    #Slider-{{ section.id }} .card.card--card:after {
      opacity: {{ section.settings.product_card_glow_opacity | divided_by: 100.0 }};
    }
  {%- else -%}
    #Slider-{{ section.id }} .card.gradient,
    #Slider-{{ section.id }} .card.card--standard .card__inner,
    #Slider-{{ section.id }} .card.card--card {
      --product-card-shadow-visible: 0;
      --product-card-shadow-opacity: 0;
      --color-shadow: 0, 0, 0;
    }
  {%- endif -%}

  {%- if section.settings.enable_title_color -%}
    #Slider-{{ section.id }} .card__heading a,
    #Slider-{{ section.id }} .card__heading {
      color: {{ section.settings.product_title_color }} !important;
    }
  {%- endif -%}

  {%- if section.settings.enable_price_color -%}
    #Slider-{{ section.id }} .price .price-item,
    #Slider-{{ section.id }} .price__regular .price-item,
    #Slider-{{ section.id }} .price__sale .price-item--regular,
    #Slider-{{ section.id }} .price__sale .price-item--sale,
    #Slider-{{ section.id }} .card__information .price .price-item {
      color: {{ section.settings.product_price_color }} !important;
    }
  {%- endif -%}

  {%- if section.settings.enable_title_styling -%}
    #Slider-{{ section.id }} .card__heading a,
    #Slider-{{ section.id }} .card__heading {
      font-size: {{ section.settings.title_font_size }}px;
      font-weight: {{ section.settings.title_font_weight }};
      {%- if section.settings.title_font_family != 'default' -%}
        font-family: {{ section.settings.title_font_family }};
      {%- endif -%}
    }
  {%- endif -%}

  {%- if section.settings.enable_price_styling -%}
    #Slider-{{ section.id }} .price .price-item {
      font-size: {{ section.settings.price_font_size }}px;
      font-weight: {{ section.settings.price_font_weight }};
      {%- if section.settings.price_font_family != 'default' -%}
        font-family: {{ section.settings.price_font_family }};
      {%- endif -%}
    }
  {%- endif -%}

  {%- if section.settings.enable_vendor_styling -%}
    #Slider-{{ section.id }} .card__information .caption-with-letter-spacing {
      font-size: {{ section.settings.vendor_font_size }}px;
      font-weight: {{ section.settings.vendor_font_weight }};
      {%- if section.settings.vendor_font_family != 'default' -%}
        font-family: {{ section.settings.vendor_font_family }};
      {%- endif -%}
    }
  {%- endif -%}

  {%- if section.settings.content_padding_top -%}
  #Slider-{{ section.id }} .card__content {
    padding-top: {{ section.settings.content_padding_top }}px !important;
  }
  {%- endif -%}

  {%- if section.settings.full_width -%}
  .section-{{ section.id }}-padding {
    max-width: 100vw;
    width: 100%;
  }
  .section-{{ section.id }}-padding .collection {
    padding-left: 0;
    padding-right: 0;
  }
  .section-{{ section.id }}-padding .page-width,
  .section-{{ section.id }}-padding .page-width-desktop {
    max-width: 100vw;
    padding-left: 2rem;
    padding-right: 2rem;
  }
  .section-{{ section.id }}-padding .slider-component-full-width {
    max-width: 100vw;
  }
  {%- endif -%}

  /* Horizontal Padding */
  .section-{{ section.id }}-padding .collection,
  .section-{{ section.id }}-padding .slider-mobile-gutter {
    padding-left: {{ section.settings.horizontal_padding }}px;
    padding-right: {{ section.settings.horizontal_padding }}px;
  }

  /* Product Grid Gap */
  #Slider-{{ section.id }}.product-grid {
    column-gap: {{ section.settings.product_gap }}px;
    row-gap: {{ section.settings.vertical_gap }}px;
    justify-content: center;
  }

  /* Force grid column layout on mobile */
  @media screen and (max-width: 749px) {
    #Slider-{{ section.id }}:not(.slider--tablet) {
      display: grid !important;
    }

    #Slider-{{ section.id }}.grid--1-col-tablet-down:not(.slider--tablet) {
      grid-template-columns: 1fr !important;
    }

    #Slider-{{ section.id }}.grid--2-col-tablet-down:not(.slider--tablet) {
      grid-template-columns: repeat(2, 1fr) !important;
    }

    #Slider-{{ section.id }}.grid--3-col-tablet-down:not(.slider--tablet) {
      grid-template-columns: repeat(3, 1fr) !important;
    }

    #Slider-{{ section.id }}.grid--4-col-tablet-down:not(.slider--tablet) {
      grid-template-columns: repeat(4, 1fr) !important;
    }

    #Slider-{{ section.id }}.grid--5-col-tablet-down:not(.slider--tablet) {
      grid-template-columns: repeat(5, 1fr) !important;
    }

    #Slider-{{ section.id }}:not(.slider--tablet) .grid__item {
      width: auto !important;
      max-width: none !important;
    }
  }

  /* Force grid column layout on desktop */
  @media screen and (min-width: 990px) {
    #Slider-{{ section.id }}:not(.slider--desktop) {
      display: grid !important;
    }

    #Slider-{{ section.id }}.grid--1-col-desktop:not(.slider--desktop) {
      grid-template-columns: 1fr !important;
    }

    #Slider-{{ section.id }}.grid--2-col-desktop:not(.slider--desktop) {
      grid-template-columns: repeat(2, 1fr) !important;
    }

    #Slider-{{ section.id }}.grid--3-col-desktop:not(.slider--desktop) {
      grid-template-columns: repeat(3, 1fr) !important;
    }

    #Slider-{{ section.id }}.grid--4-col-desktop:not(.slider--desktop) {
      grid-template-columns: repeat(4, 1fr) !important;
    }

    #Slider-{{ section.id }}.grid--5-col-desktop:not(.slider--desktop) {
      grid-template-columns: repeat(5, 1fr) !important;
    }

    #Slider-{{ section.id }}.grid--6-col-desktop:not(.slider--desktop) {
      grid-template-columns: repeat(6, 1fr) !important;
    }

    #Slider-{{ section.id }}.grid--7-col-desktop:not(.slider--desktop) {
      grid-template-columns: repeat(7, 1fr) !important;
    }

    #Slider-{{ section.id }}.grid--8-col-desktop:not(.slider--desktop) {
      grid-template-columns: repeat(8, 1fr) !important;
    }

    #Slider-{{ section.id }}.grid--9-col-desktop:not(.slider--desktop) {
      grid-template-columns: repeat(9, 1fr) !important;
    }

    #Slider-{{ section.id }}.grid--10-col-desktop:not(.slider--desktop) {
      grid-template-columns: repeat(10, 1fr) !important;
    }

    {%- unless section.settings.enable_custom_card_size -%}
    #Slider-{{ section.id }}:not(.slider--desktop) .grid__item {
      width: auto !important;
      max-width: none !important;
    }
    {%- endunless -%}
  }

  /* Custom Card Size - Scale cards within their columns */
  {%- if section.settings.enable_custom_card_size -%}
  #Slider-{{ section.id }} .grid__item {
    display: flex;
    justify-content: center;
  }

  @media screen and (min-width: 990px) {
    #Slider-{{ section.id }} .grid__item {
      width: auto !important;
      max-width: none !important;
    }

    #Slider-{{ section.id }} .grid__item .card,
    #Slider-{{ section.id }} .grid__item > * {
      max-width: {{ section.settings.card_max_width }}px;
      width: 100%;
    }
  }
  
  @media screen and (max-width: 749px) {
    #Slider-{{ section.id }} .grid__item {
      width: auto !important;
      max-width: none !important;
    }

    #Slider-{{ section.id }} .grid__item .card,
    #Slider-{{ section.id }} .grid__item > * {
      max-width: {{ section.settings.card_max_width_mobile }}px;
      width: 100%;
    }
  }
  {%- endif -%}
{%- endstyle -%}

{%- liquid
  assign products_to_display = section.settings.collection.all_products_count

  if section.settings.collection.all_products_count > section.settings.products_to_show
    assign products_to_display = section.settings.products_to_show
    assign more_in_collection = true
  endif

  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and products_to_display > columns_mobile_int
    assign show_mobile_slider = true
  endif

  assign show_desktop_slider = false
  if section.settings.enable_desktop_slider and products_to_display > section.settings.columns_desktop
    assign show_desktop_slider = true
  endif
-%}

<div class="color-{{ section.settings.color_scheme }} isolate gradient">
  <div class="collection section-{{ section.id }}-padding{% if section.settings.full_width %} collection--full-width{% endif %}">
    <div class="collection__title title-wrapper title-wrapper--no-top-margin page-width{% if show_mobile_slider %} title-wrapper--self-padded-tablet-down{% endif %}{% if show_desktop_slider %} collection__title--desktop-slider{% endif %}">
      {%- if section.settings.title != blank -%}
        <h2 class="title {{ section.settings.heading_size }}">{{ section.settings.title | escape }}</h2>
      {%- endif -%}
      {%- if section.settings.description != blank
        or section.settings.show_description
        and section.settings.collection.description != empty
      -%}
        <div class="collection__description {{ section.settings.description_style }} rte">
          {%- if section.settings.show_description -%}
            {{ section.settings.collection.description }}
          {%- else -%}
            {{ section.settings.description -}}
          {%- endif %}
        </div>
      {%- endif -%}
    </div>

    <slider-component class="slider-mobile-gutter{% if section.settings.full_width %} slider-component-full-width{% endif %}{% if show_mobile_slider == false %} page-width{% endif %}{% if show_desktop_slider == false and section.settings.full_width == false %} page-width-desktop{% endif %}{% if show_desktop_slider %} slider-component-desktop{% endif %}">
      <ul
        id="Slider-{{ section.id }}"
        class="grid product-grid contains-card contains-card--product{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} grid--{{ section.settings.columns_desktop }}-col-desktop{% if section.settings.collection == blank %} grid--2-col-tablet-down{% else %} grid--{{ section.settings.columns_mobile }}-col-tablet-down{% endif %}{% if show_mobile_slider or show_desktop_slider %} slider{% if show_desktop_slider %} slider--desktop{% endif %}{% if show_mobile_slider %} slider--tablet grid--peek{% endif %}{% endif %}"
        role="list"
        aria-label="{{ 'general.slider.name' | t }}"
      >
        {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
          <li
            id="Slide-{{ section.id }}-{{ forloop.index }}"
            class="grid__item{% if show_mobile_slider or show_desktop_slider %} slider__slide{% endif %}"
          >
            {% render 'card-product',
              card_product: product,
              media_aspect_ratio: section.settings.image_ratio,
              show_secondary_image: section.settings.show_secondary_image,
              show_vendor: section.settings.show_vendor,
              show_rating: section.settings.show_rating,
              show_product_title: section.settings.show_product_title,
              show_product_price: section.settings.show_product_price,
              show_quick_add: section.settings.enable_quick_add,
              section_id: section.id
            %}
          </li>
        {%- else -%}
          {%- for i in (1..4) -%}
            <li class="grid__item">
              {% render 'card-product', show_vendor: section.settings.show_vendor %}
            </li>
          {%- endfor -%}
        {%- endfor -%}
      </ul>
      {%- if show_mobile_slider or show_desktop_slider -%}
        <div class="slider-buttons no-js-hidden">
          <button
            type="button"
            class="slider-button slider-button--prev"
            name="previous"
            aria-label="{{ 'general.slider.previous_slide' | t }}"
            aria-controls="Slider-{{ section.id }}"
          >
            {% render 'icon-caret' %}
          </button>
          <div class="slider-counter caption">
            <span class="slider-counter--current">1</span>
            <span aria-hidden="true"> / </span>
            <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
            <span class="slider-counter--total">{{ products_to_display }}</span>
          </div>
          <button
            type="button"
            class="slider-button slider-button--next"
            name="next"
            aria-label="{{ 'general.slider.next_slide' | t }}"
            aria-controls="Slider-{{ section.id }}"
          >
            {% render 'icon-caret' %}
          </button>
        </div>
      {%- endif -%}
    </slider-component>

    {%- if section.settings.show_view_all and more_in_collection -%}
      <div class="center collection__view-all">
        <a
          href="{{ section.settings.collection.url }}"
          class="{% if section.settings.view_all_style == 'link' %}link underlined-link{% elsif section.settings.view_all_style == 'solid' %}button{% else %}button button--secondary{% endif %}"
          aria-label="{{ 'sections.featured_collection.view_all_label' | t: collection_name: section.settings.collection.title }}"
        >
          {{ 'sections.featured_collection.view_all' | t }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

