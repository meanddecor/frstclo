        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h0",
      "label": "Heading Size"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description Text"
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Display collection description",
      "default": false
    },
    {
      "type": "select",
      "id": "description_style",
      "label": "Description Style",
      "options": [
        {
          "value": "body",
          "label": "Body Text"
        },
        {
          "value": "subtitle",
          "label": "Subtitle"
        },
        {
          "value": "uppercase",
          "label": "Uppercase"
        }
      ],
      "default": "subtitle"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Choose Collection"
    },
