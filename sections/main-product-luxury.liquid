{% comment %}
✅ GLOBAL SETTINGS APPLIED:
- Colors: color_background, color_foreground, color_button, color_button_text
- Typography: type_header_font, type_body_font, heading_letter_spacing
- Buttons: button_radius
- Layout: page_width
- Variant Pills: variant_pill_size
- Media: image_lazy_loading

✅ CUSTOMIZABLE IMAGE SETTINGS:
- Image width (desktop only): 50-200% (values over 100% create overflow effect)
- Image padding: top, right, bottom, left (0-200px each)
- Image margin: top, right, bottom, left (0-200px each)

✅ LIGHTBOX FEATURES:
- Click any image to view enlarged in fullscreen lightbox
- Navigate with arrow buttons or keyboard (← →)
- Close with X button, ESC key, or click outside
- Image counter shows position (e.g., "2 / 5")
{% endcomment %}

<section
  id="MainProductLuxury-{{ section.id }}"
  class="luxury-product-section section-{{ section.id }}-padding"
  data-section="{{ section.id }}"
>
  {{ 'main-product-luxury.css' | asset_url | stylesheet_tag }}
  {{ 'component-price.css' | asset_url | stylesheet_tag }}
  {{ 'component-loading-overlay.css' | asset_url | stylesheet_tag }}

  {%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }

    .luxury-product-section {
      background: rgb(var(--color-background));
      color: rgb(var(--color-foreground));
    }

    @media screen and (min-width: 1025px) {
      .product-info {
        grid-template-columns: {{ section.settings.left_column_width }}px 1fr {{ section.settings.right_column_width }}px;
        gap: {{ section.settings.column_gap }}rem;
      }
    }

    .figureImg {
      gap: {{ section.settings.image_gap }}rem;
    }

    .product__item-img {
      padding-top: {{ section.settings.image_padding_top }}px;
      padding-right: {{ section.settings.image_padding_right }}px;
      padding-bottom: {{ section.settings.image_padding_bottom }}px;
      padding-left: {{ section.settings.image_padding_left }}px;
      margin-top: {{ section.settings.image_margin_top }}px;
      margin-right: {{ section.settings.image_margin_right }}px;
      margin-bottom: {{ section.settings.image_margin_bottom }}px;
      margin-left: {{ section.settings.image_margin_left }}px;
    }

    @media screen and (min-width: 1025px) {
      .product__item-img {
        width: {{ section.settings.image_width }}%;
        max-width: none;
      }
    }

    .product-info__title {
      font-family: var(--font-heading-family);
      letter-spacing: {{ settings.heading_letter_spacing }};
    }

    .item-type h2 {
      border-color: rgb(var(--color-foreground));
      color: rgb(var(--color-foreground));
    }

    .option-value {
      padding: {{ section.settings.variant_button_padding_v }}px {{ section.settings.variant_button_padding_h }}px;
      font-size: {{ section.settings.variant_button_font_size }}px;
      min-width: {{ section.settings.variant_button_min_width }}px;
      border-color: {{ section.settings.variant_button_border_color }};
      background: {{ section.settings.variant_button_bg }};
      color: {{ section.settings.variant_button_text_color }};
      border: 1px solid {{ section.settings.variant_button_border_color }};
      cursor: pointer;
      transition: all 0.2s ease;
      {% if settings.button_radius > 0 %}
        border-radius: {{ settings.button_radius }}px;
      {% endif %}
    }

    .option-value:hover:not(.color-swatch) {
      background: {{ section.settings.variant_button_hover_bg }};
    }

    .option-value.active:not(.color-swatch) {
      background: {{ section.settings.variant_button_active_bg }};
      color: {{ section.settings.variant_button_active_text }};
      border-color: {{ section.settings.variant_button_active_border_color }};
    }

    .product-info__cart-btn {
      background: {{ section.settings.cart_button_bg }};
      color: {{ section.settings.cart_button_text }};
      {% if settings.button_radius > 0 %}
        border-radius: {{ settings.button_radius }}px;
      {% endif %}
    }

    .product-info__cart-btn:hover:not(:disabled) {
      background: {{ section.settings.cart_button_hover_bg }};
    }

    .nav-dot {
      border-color: rgb(var(--color-foreground));
    }

    .nav-dot.active {
      background-color: rgb(var(--color-foreground));
    }

    .nav-arrow {
      color: rgb(var(--color-foreground));
    }

    .variant-option-group {
      margin-bottom: 1.5rem;
    }

    .variant-option-label {
      font-size: 13px;
      font-weight: 600;
      margin-bottom: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      color: rgb(var(--color-foreground));
    }

    .option-value.color-swatch {
      min-width: {{ section.settings.variant_button_min_width }}px;
      width: auto;
      height: auto;
      padding: {{ section.settings.variant_button_padding_v }}px {{ section.settings.variant_button_padding_h }}px;
      background: {{ section.settings.variant_button_bg }} !important;
      border: 1px solid {{ section.settings.variant_button_border_color }};
      border-radius: {% if settings.button_radius > 0 %}{{ settings.button_radius }}px{% else %}0{% endif %};
    }

    .option-value.color-swatch:hover {
      background: {{ section.settings.variant_button_hover_bg }} !important;
      border-color: {{ section.settings.variant_button_border_color }};
      transform: none;
    }

    .option-value.color-swatch.active {
      background: {{ section.settings.variant_button_active_bg }} !important;
      color: {{ section.settings.variant_button_active_text }};
      border-color: {{ section.settings.variant_button_active_border_color }};
      border-width: 1px;
      transform: none;
    }

    .option-value.color-swatch .color-swatch-inner {
      width: 16px;
      height: 16px;
      display: inline-block;
      border-radius: 2px;
      vertical-align: middle;
      margin-right: 8px;
    }

    .option-value.color-swatch span {
      position: static;
      width: auto;
      height: auto;
      padding: 0;
      margin: 0;
      overflow: visible;
      clip: auto;
      white-space: normal;
    }

    .product-info__description-mobile {
      display: none;
    }

    @media screen and (max-width: 1024px) {
      .product-info {
        display: flex;
        flex-direction: column;
      }

      .product-info__pc {
        padding: 1.5rem 1.5rem 0;
        text-align: center;
      }

      .product-info__title {
        font-size: 20px;
        margin-bottom: 1rem;
        text-align: center !important;
      }

      .item-type {
        margin-bottom: 1.5rem;
        text-align: center !important;
        display: flex;
        justify-content: center;
      }

      .item-type h2 {
        font-size: 12px;
        padding: 6px 12px;
        display: inline-block;
      }

      .figureImg {
        padding: 0;
        margin: 0;
      }

      .product__item-img {
        padding: 0;
        margin: 0;
      }

      .product-info__main {
        padding: 0 1.5rem 1.5rem;
      }

      .image-navigation {
        padding: 1rem 1.5rem;
      }

      .variant-option-group {
        margin-bottom: 1rem;
      }

      .variant-option-label {
        font-size: 12px;
        margin-bottom: 0.5rem;
      }

      .option-value {
        padding: {{ section.settings.variant_button_padding_v | divided_by: 1.2 | round: 0 }}px {{ section.settings.variant_button_padding_h | divided_by: 1.2 | round: 0 }}px;
        font-size: {{ section.settings.variant_button_font_size | minus: 1 }}px;
        min-width: {{ section.settings.variant_button_min_width | minus: 5 }}px;
      }

      .product-price {
        font-size: 16px;
        margin-bottom: 16px;
      }

      .product-info__cart-btn {
        padding: 14px;
        font-size: 13px;
      }

      .product-info__description-mobile {
        display: block;
      }
    }

    @media screen and (max-width: 749px) {
      .product-info__pc {
        padding: 1rem 1rem 0;
        text-align: center;
      }

      .product-info__main {
        padding: 0 1rem 1rem;
      }

      .image-navigation {
        padding: 0.75rem 1rem;
      }

      .product-info__title {
        font-size: 18px;
        text-align: center !important;
      }

      .item-type {
        text-align: center !important;
      }
    }
  {%- endstyle -%}

  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'main-product-luxury.js' | asset_url }}" defer="defer"></script>

  {%- if request.design_mode -%}
    <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
  {%- endif -%}

  <div class="page-width">
    <div class="product-info">
      {%- comment -%} Left Column: Product Info {%- endcomment -%}
      <div class="product-info__pc">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'title' -%}
                <h1 class="product-info__title" 
                    style="
                      font-size: {{ block.settings.font_size }}px;
                      letter-spacing: {{ block.settings.letter_spacing }}px;
                      margin-bottom: {{ block.settings.margin_bottom }}px;
                      text-align: {{ block.settings.text_align | default: 'left' }};
                      color: {% if block.settings.text_color != blank %}{{ block.settings.text_color }}{% else %}rgb(var(--color-foreground)){% endif %} !important;
                      {% if block.settings.uppercase %}text-transform: uppercase;{% endif %}
                    "
                    {{ block.shopify_attributes }}>
                  {% if block.settings.uppercase %}
                    {{ product.title | escape | upcase }}
                  {% else %}
                    {{ product.title | escape }}
                  {% endif %}
                </h1>

              {%- when 'product_type' -%}
                {%- if product.type != blank -%}
                  <div class="item-type" 
                       style="margin-bottom: {{ block.settings.margin_bottom }}px; text-align: {{ block.settings.text_align | default: 'left' }};"
                       {{ block.shopify_attributes }}>
                    <h2 style="
                          font-size: {{ block.settings.font_size }}px;
                          padding: {{ block.settings.padding_v }}px {{ block.settings.padding_h }}px;
                          border-width: {{ block.settings.border_width }}px;
                          color: {% if block.settings.text_color != blank %}{{ block.settings.text_color }}{% else %}rgb(var(--color-foreground)){% endif %} !important;
                          {% if block.settings.border_color != blank %}border-color: {{ block.settings.border_color }};{% else %}border-color: rgb(var(--color-foreground));{% endif %}
                          {% if block.settings.background_color != blank %}background-color: {{ block.settings.background_color }};{% endif %}
                        ">
                      {{ product.type | upcase }}
                    </h2>
                  </div>
                {%- endif -%}

              {%- when 'description' -%}
                {%- if product.description != blank -%}
                  <div class="product-info__description-pc" 
                       style="
                         font-size: {{ block.settings.font_size }}px;
                         line-height: {{ block.settings.line_height }};
                         margin-bottom: {{ block.settings.margin_bottom }}px;
                         text-align: {{ block.settings.text_align | default: 'left' }};
                         color: {% if block.settings.text_color != blank %}{{ block.settings.text_color }}{% else %}rgb(var(--color-foreground)){% endif %} !important;
                       "
                       {{ block.shopify_attributes }}>
                    {{ product.description }}
                  </div>
                {%- endif -%}

              {%- when 'custom_text' -%}
                {%- if block.settings.text != blank -%}
                  <div class="product-info__description-pc" 
                       style="
                         font-size: {{ block.settings.font_size }}px;
                         line-height: {{ block.settings.line_height }};
                         margin-bottom: {{ block.settings.margin_bottom }}px;
                         color: {% if block.settings.text_color != blank %}{{ block.settings.text_color }}{% else %}rgb(var(--color-foreground)){% endif %} !important;
                       "
                       {{ block.shopify_attributes }}>
                    <p>{{ block.settings.text }}</p>
                  </div>
                {%- endif -%}

              {%- when 'sku' -%}
                <div class="product-info__description-pc" 
                     style="
                       font-size: {{ block.settings.font_size }}px;
                       margin-top: {{ block.settings.margin_top }}px;
                       text-align: {{ block.settings.text_align | default: 'left' }};
                       color: {% if block.settings.text_color != blank %}{{ block.settings.text_color }}{% else %}rgb(var(--color-foreground)){% endif %} !important;
                     "
                     {{ block.shopify_attributes }}>
                  <p{% if product.selected_or_first_available_variant.sku.size == 0 %} class="hidden"{% endif %}>
                    {{ block.settings.prefix_text }} {{ product.selected_or_first_available_variant.sku }}
                  </p>
                </div>

              {%- when '@app' -%}
                {% render block %}
            {%- endcase -%}
          {%- endfor -%}
      </div>

      {%- comment -%} Middle Column: Image Gallery {%- endcomment -%}
      <div class="figureImg" id="luxury-gallery-{{ section.id }}">
        {%- if product.media.size > 0 -%}
          {%- for media in product.media -%}
            {%- case media.media_type -%}
              {%- when 'image' -%}
                <img
                  class="product__item-img"
                  src="{{ media | image_url: width: 1600 }}"
                  data-lightbox-src="{{ media | image_url: width: 2400 }}"
                  data-media-index="{{ forloop.index0 }}"
                  alt="{{ media.alt | escape }}"
                  loading="lazy"
                  width="{{ media.width }}"
                  height="{{ media.height }}"
                >
              {%- when 'video' -%}
                <div class="product__item-img">
                  {{ media | video_tag: controls: true }}
                </div>
              {%- when 'external_video' -%}
                <div class="product__item-img">
                  {{ media | external_video_tag }}
                </div>
              {%- when 'model' -%}
                <div class="product__item-img">
                  {{ media | model_viewer_tag }}
                </div>
            {%- endcase -%}
          {%- endfor -%}
        {%- else -%}
          {{ 'product-1' | placeholder_svg_tag: 'product__item-img' }}
        {%- endif -%}
      </div>

      {%- comment -%} Mobile Navigation {%- endcomment -%}
      <div class="image-navigation" id="luxury-nav-{{ section.id }}">
        <button type="button" class="nav-arrow" id="prev-arrow-{{ section.id }}" aria-label="Previous image">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <div class="nav-counter" id="nav-counter-{{ section.id }}">1/{{ product.media.size }}</div>
        <button type="button" class="nav-arrow" id="next-arrow-{{ section.id }}" aria-label="Next image">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>

      {%- comment -%} Right Column: Purchase Options {%- endcomment -%}
      <div class="product-info__main">
        {%- form 'product', product, id: 'AddToCartForm', novalidate: 'novalidate' -%}
          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

          {%- unless product.has_only_default_variant -%}
            <div class="product-options">
              {%- for option in product.options_with_values -%}
                {%- liquid
                  assign option_name = option.name | downcase
                  assign is_color = false
                  if option_name contains 'color' or option_name contains 'colour'
                    assign is_color = true
                  endif
                -%}
                
                <div class="variant-option-group">
                  <div class="variant-option-label">{{ option.name }}:</div>
                  <div class="option-values">
                    {%- for value in option.values -%}
                      <button
                        type="button"
                        class="option-value{% if is_color %} color-swatch{% endif %}{% if option.selected_value == value %} active{% endif %}"
                        data-option-position="{{ option.position }}"
                        data-option-value="{{ value | escape }}"
                      >
                        {%- if is_color -%}
                          {%- capture swatch_color -%}{%- render 'color-swatch-config', color: value -%}{%- endcapture -%}
                          {%- assign final_color = swatch_color | strip -%}
                          <span class="color-swatch-inner" style="background-color: {{ final_color }};"></span>
                          <span>{{ value }}</span>
                        {%- else -%}
                          {{ value }}
                        {%- endif -%}
                      </button>
                    {%- endfor -%}
                  </div>
                </div>
              {%- endfor -%}
            </div>

            <script type="application/json" id="product-variants-{{ section.id }}">
              {{ product.variants | json }}
            </script>
          {%- endunless -%}

          <div class="product-price">
            {{ product.selected_or_first_available_variant.price | money }}
          </div>

          <button
            class="product-info__cart-btn"
            type="submit"
            {% if product.selected_or_first_available_variant.available == false %}disabled{% endif %}
          >
            {%- if product.selected_or_first_available_variant.available -%}
              Add to Cart
            {%- else -%}
              Sold Out
            {%- endif -%}
          </button>

          <div class="product-info__description-mobile">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'description' -%}
                  {%- if product.description != blank -%}
                    <div style="
                           font-size: {{ block.settings.font_size }}px;
                           line-height: {{ block.settings.line_height }};
                           margin-bottom: {{ block.settings.margin_bottom }}px;
                           text-align: {{ block.settings.text_align | default: 'left' }};
                           color: {% if block.settings.text_color != blank %}{{ block.settings.text_color }}{% else %}rgb(var(--color-foreground)){% endif %} !important;
                         ">
                      {{ product.description }}
                    </div>
                  {%- endif -%}
                {%- when 'custom_text' -%}
                  {%- if block.settings.text != blank -%}
                    <p style="
                         font-size: {{ block.settings.font_size }}px;
                         line-height: {{ block.settings.line_height }};
                         margin-bottom: {{ block.settings.margin_bottom }}px;
                         color: {% if block.settings.text_color != blank %}{{ block.settings.text_color }}{% else %}rgb(var(--color-foreground)){% endif %} !important;
                       ">
                      {{ block.settings.text }}
                    </p>
                  {%- endif -%}
                {%- when 'sku' -%}
                  <p style="
                       font-size: {{ block.settings.font_size }}px;
                       margin-top: {{ block.settings.margin_top }}px;
                       text-align: {{ block.settings.text_align | default: 'left' }};
                       color: {% if block.settings.text_color != blank %}{{ block.settings.text_color }}{% else %}rgb(var(--color-foreground)){% endif %} !important;
                     "
                     {% if product.selected_or_first_available_variant.sku.size == 0 %} class="hidden"{% endif %}>
                    {{ block.settings.prefix_text }} {{ product.selected_or_first_available_variant.sku }}
                  </p>
              {%- endcase -%}
            {%- endfor -%}
          </div>
        {%- endform -%}
      </div>
    </div>
  </div>

  {%- liquid
    if product.selected_or_first_available_variant.featured_media
      assign seo_media = product.selected_or_first_available_variant.featured_media
    else
      assign seo_media = product.featured_media
    endif
  -%}

  <script type="application/ld+json">
    {
      "@context": "http://schema.org/",
      "@type": "Product",
      "name": {{ product.title | json }},
      "url": {{ request.origin | append: product.url | json }},
      {% if seo_media -%}
        "image": [
          {{ seo_media | image_url: width: 1920 | prepend: "https:" | json }}
        ],
      {%- endif %}
      "description": {{ product.description | strip_html | json }},
      {% if product.selected_or_first_available_variant.sku != blank -%}
        "sku": {{ product.selected_or_first_available_variant.sku | json }},
      {%- endif %}
      "brand": {
        "@type": "Brand",
        "name": {{ product.vendor | json }}
      },
      "offers": [
        {%- for variant in product.variants -%}
          {
            "@type" : "Offer",
            {%- if variant.sku != blank -%}
              "sku": {{ variant.sku | json }},
            {%- endif -%}
            {%- if variant.barcode.size == 12 -%}
              "gtin12": {{ variant.barcode }},
            {%- endif -%}
            {%- if variant.barcode.size == 13 -%}
              "gtin13": {{ variant.barcode }},
            {%- endif -%}
            {%- if variant.barcode.size == 14 -%}
              "gtin14": {{ variant.barcode }},
            {%- endif -%}
            "availability" : "http://schema.org/{% if variant.available %}InStock{% else %}OutOfStock{% endif %}",
            "price" : {{ variant.price | divided_by: 100.00 | json }},
            "priceCurrency" : {{ cart.currency.iso_code | json }},
            "url" : {{ request.origin | append: variant.url | json }}
          }{% unless forloop.last %},{% endunless %}
        {%- endfor -%}
      ]
    }
  </script>

  {%- comment -%} Lightbox Modal {%- endcomment -%}
  <div class="luxury-lightbox" id="lightbox-{{ section.id }}" style="display: none;">
    <button type="button" class="lightbox-close" aria-label="Close lightbox">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
    <button type="button" class="lightbox-arrow lightbox-prev" aria-label="Previous image">
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="15 18 9 12 15 6"></polyline>
      </svg>
    </button>
    <button type="button" class="lightbox-arrow lightbox-next" aria-label="Next image">
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="9 18 15 12 9 6"></polyline>
      </svg>
    </button>
    <div class="lightbox-content">
      <img class="lightbox-image" src="" alt="">
      <div class="lightbox-counter"></div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Luxury Product",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Variant Buttons"
    },
    {
      "type": "range",
      "id": "variant_button_padding_v",
      "min": 4,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Vertical padding",
      "default": 8
    },
    {
      "type": "range",
      "id": "variant_button_padding_h",
      "min": 8,
      "max": 32,
      "step": 1,
      "unit": "px",
      "label": "Horizontal padding",
      "default": 12
    },
    {
      "type": "range",
      "id": "variant_button_font_size",
      "min": 10,
      "max": 18,
      "step": 1,
      "unit": "px",
      "label": "Font size",
      "default": 13
    },
    {
      "type": "range",
      "id": "variant_button_min_width",
      "min": 30,
      "max": 80,
      "step": 2,
      "unit": "px",
      "label": "Minimum width",
      "default": 40
    },
    {
      "type": "color",
      "id": "variant_button_bg",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "variant_button_text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "variant_button_border_color",
      "label": "Border color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "variant_button_hover_bg",
      "label": "Hover background",
      "default": "#f0f0f0"
