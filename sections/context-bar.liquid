{%- style -%}
  .context-bar-{{ section.id }} {
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    background-color: {{ section.settings.background_color }} !important;
  }

  .context-bar-{{ section.id }} .context-bar__wrapper {
    width: {{ section.settings.content_width }}vw;
    max-width: 100%;
    margin-left: auto;
    margin-right: auto;
  }

  .context-bar-{{ section.id }} .context-bar__inner {
    text-align: {{ section.settings.text_alignment }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    padding-left: {{ section.settings.padding_left }}px;
    padding-right: {{ section.settings.padding_right }}px;
  }

  .context-bar-{{ section.id }} .context-bar__heading {
    margin-top: 0;
    margin-bottom: {{ section.settings.heading_spacing }}px;
    font-size: {{ section.settings.heading_size_desktop }}px;
    line-height: 1.2;
    color: {{ section.settings.heading_color }} !important;
  }

  .context-bar-{{ section.id }} .context-bar__text {
    margin: 0;
    font-size: {{ section.settings.text_size_desktop }}px;
    line-height: 1.6;
    color: {{ section.settings.text_color }} !important;
  }

  .context-bar-{{ section.id }} .context-bar__text * {
    color: {{ section.settings.text_color }} !important;
  }

  .context-bar-{{ section.id }} .context-bar__button .button {
    background-color: {{ section.settings.button_background }} !important;
    color: {{ section.settings.button_text_color }} !important;
    border-color: {{ section.settings.button_background }} !important;
  }

  .context-bar-{{ section.id }} .context-bar__button .button:hover {
    background-color: {{ section.settings.button_background_hover }} !important;
    color: {{ section.settings.button_text_color }} !important;
    border-color: {{ section.settings.button_background_hover }} !important;
  }

  @media screen and (max-width: 749px) {
    .context-bar-{{ section.id }} .context-bar__heading {
      font-size: {{ section.settings.heading_size_mobile }}px;
    }

    .context-bar-{{ section.id }} .context-bar__text {
      font-size: {{ section.settings.text_size_mobile }}px;
    }
  }
{%- endstyle -%}

<div class="context-bar-{{ section.id }}">
  <div class="context-bar__wrapper">
    <div class="context-bar__inner">
      {%- if section.settings.heading != blank -%}
        <h2 class="context-bar__heading {{ section.settings.heading_tag }}">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}

      {%- if section.settings.text != blank -%}
        <div class="context-bar__text rte">
          {{ section.settings.text }}
        </div>
      {%- endif -%}

      {%- if section.settings.button_label != blank -%}
        <div class="context-bar__button" style="margin-top: {{ section.settings.button_spacing }}px;">
          <a
            href="{{ section.settings.button_link }}"
            class="button{% if section.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
          >
            {{ section.settings.button_label }}
          </a>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

