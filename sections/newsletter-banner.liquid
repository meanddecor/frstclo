<div class="newsletter-banner__wrapper">
  <div class="newsletter-banner__container page-width">
    {% if section.settings.heading != blank %}
      <h2 class="newsletter-banner__heading">
        {{ section.settings.heading }}
      </h2>
    {% endif %}
    
    {% if section.settings.description != blank %}
      <p class="newsletter-banner__description">
        {{ section.settings.description }}
      </p>
    {% endif %}

    <div class="newsletter-banner__signup">
      <form method="post" action="/contact#contact_form" id="contact_form_{{ section.id }}" accept-charset="UTF-8" class="contact-form">
        <input type="hidden" name="form_type" value="customer">
        <input type="hidden" name="utf8" value="✓">
        
        {% if section.settings.form_tags != blank %}
          <input type="hidden" name="contact[tags]" value="{{ section.settings.form_tags }}">
        {% endif %}
        
        <div class="newsletter-banner__form-group">
          <input 
            type="email" 
            name="contact[email]" 
            id="Email_{{ section.id }}" 
            class="newsletter-banner__input" 
            placeholder="{{ section.settings.input_placeholder }}"
            required
          >
          <span class="newsletter-banner__button-cont">
            <button class="newsletter-banner__button" type="submit" name="commit">
              <span>{{ section.settings.button_text }}</span>
            </button>
          </span>
        </div>
      </form>
      
      <h3 class="newsletter-banner__success-message" id="success_message_{{ section.id }}">
        {{ section.settings.success_message }}
      </h3>
    </div>
  </div>
</div>

<script>
  (function() {
    const sectionId = '{{ section.id }}';
    const successMessage = document.getElementById('success_message_' + sectionId);
    const formGroup = document.querySelector('#shopify-section-' + sectionId + ' .newsletter-banner__form-group');
    
    function checkFormSubmission() {
      if (window.location.search === '?customer_posted=true' || window.location.hash === '#contact_form') {
        if (formGroup) {
          formGroup.style.display = 'none';
        }
        if (successMessage) {
          successMessage.style.display = 'block';
        }
      }
    }
    
    // Check on page load
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', checkFormSubmission);
    } else {
      checkFormSubmission();
    }
  })();
</script>

