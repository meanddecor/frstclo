{% comment %}
✅ GLOBAL SETTINGS APPLIED:
- Colors: color_background, color_text, color_button, color_button_text
- Typography: type_header_font, type_body_font
- Buttons: button_style, button_radius, button_shadow_opacity
- Layout: page_width
- Inputs: input_border_thickness, input_corner_radius, input_shadow_opacity
{% endcomment %}

<style>
  #shopify-section-{{ section.id }} {
    --section-bg-color: {{ section.settings.background_color }};
    --text-color: {{ section.settings.text_color }};
    --button-bg-color: {{ section.settings.button_background }};
    --button-text-color: {{ section.settings.button_text_color }};
    --input-border-color: {{ section.settings.input_border_color }};
    
    /* Global theme settings */
    --page-width: {{ settings.page_width }}px;
    --button-radius: {{ settings.button_radius }}px;
    --input-radius: {{ settings.input_corner_radius }}px;
    --header-font: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    --body-font: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
  }
  
  .newsletter-banner__wrapper {
    background-color: var(--section-bg-color);
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  
  .newsletter-banner__container {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 1.5rem;
  }
  
  .newsletter-banner__heading {
    text-align: center;
    font-family: var(--header-font);
    font-size: {{ section.settings.heading_size }}px;
    color: var(--text-color);
    margin-bottom: {{ section.settings.heading_spacing }}px;
    font-weight: {{ section.settings.heading_weight }};
    text-transform: {{ section.settings.heading_transform }};
    letter-spacing: {{ section.settings.heading_letter_spacing }}px;
  }
  
  .newsletter-banner__description {
    text-align: center;
    max-width: {{ section.settings.description_max_width }}rem;
    margin: 0 auto;
    font-family: var(--body-font);
    font-size: {{ section.settings.description_size }}px;
    color: var(--text-color);
    line-height: 1.6;
  }
  
  .newsletter-banner__form-group {
    display: flex;
    justify-content: center;
    align-items: stretch;
    margin-top: {{ section.settings.form_spacing }}px;
    gap: {{ section.settings.form_gap }}px;
    flex-wrap: wrap;
  }
  
  .newsletter-banner__input {
    display: block;
    width: {{ section.settings.input_width }}px;
    padding: {{ section.settings.input_padding_vertical }}px {{ section.settings.input_padding_horizontal }}px;
    font-size: {{ section.settings.input_font_size }}px;
    font-family: var(--body-font);
    border: {{ settings.input_border_thickness }}px solid var(--input-border-color);
    border-radius: var(--input-radius);
    background-color: {{ section.settings.input_background }};
    color: var(--text-color);
    {% if settings.input_shadow_opacity > 0 %}
    box-shadow: 0 2px 4px rgba(0, 0, 0, {{ settings.input_shadow_opacity | divided_by: 100.0 }});
    {% endif %}
  }
  
  .newsletter-banner__input::placeholder {
    color: {{ section.settings.placeholder_color }};
  }
  
  .newsletter-banner__input:focus {
    outline: none;
    border-color: var(--button-bg-color);
  }
  
  .newsletter-banner__button {
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    cursor: pointer;
    font-size: {{ section.settings.button_font_size }}px;
    font-family: var(--body-font);
    font-weight: {{ section.settings.button_weight }};
    border: none;
    border-radius: var(--button-radius);
    color: var(--button-text-color);
    background: var(--button-bg-color);
    text-transform: {{ section.settings.button_transform }};
    transition: opacity 0.3s ease;
    {% if settings.button_shadow_opacity > 0 %}
    box-shadow: 0 2px 4px rgba(0, 0, 0, {{ settings.button_shadow_opacity | divided_by: 100.0 }});
    {% endif %}
  }
  
  .newsletter-banner__button:hover {
    opacity: {{ section.settings.button_hover_opacity | divided_by: 100.0 }};
  }
  
  .newsletter-banner__success-message {
    text-align: center;
    margin: 20px 0;
    display: none;
    font-family: var(--body-font);
    font-size: {{ section.settings.success_font_size }}px;
    color: {{ section.settings.success_text_color }};
  }
  
  @media screen and (max-width: 749px) {
    .newsletter-banner__heading {
      font-size: {{ section.settings.heading_size_mobile }}px;
      margin-bottom: {{ section.settings.heading_spacing_mobile }}px;
    }
    
    .newsletter-banner__form-group {
      flex-direction: column;
      align-items: center;
    }
    
    .newsletter-banner__input {
      width: 100%;
      max-width: {{ section.settings.input_width }}px;
    }
    
    .newsletter-banner__button {
      width: 100%;
      max-width: {{ section.settings.input_width }}px;
    }
  }
</style>

<div class="newsletter-banner__wrapper">
  <div class="newsletter-banner__container page-width">
    {% if section.settings.heading != blank %}
      <h2 class="newsletter-banner__heading">
        {{ section.settings.heading }}
      </h2>
    {% endif %}
    
    {% if section.settings.description != blank %}
      <p class="newsletter-banner__description">
        {{ section.settings.description }}
      </p>
    {% endif %}

    <div class="newsletter-banner__signup">
      <form method="post" action="/contact#contact_form" id="contact_form_{{ section.id }}" accept-charset="UTF-8" class="contact-form">
        <input type="hidden" name="form_type" value="customer">
        <input type="hidden" name="utf8" value="✓">
        
        {% if section.settings.form_tags != blank %}
          <input type="hidden" name="contact[tags]" value="{{ section.settings.form_tags }}">
        {% endif %}
        
        <div class="newsletter-banner__form-group">
          <input 
            type="email" 
            name="contact[email]" 
            id="Email_{{ section.id }}" 
            class="newsletter-banner__input" 
            placeholder="{{ section.settings.input_placeholder }}"
            required
          >
          <span class="newsletter-banner__button-cont">
            <button class="newsletter-banner__button" type="submit" name="commit">
              <span>{{ section.settings.button_text }}</span>
            </button>
          </span>
        </div>
      </form>
      
      <h3 class="newsletter-banner__success-message" id="success_message_{{ section.id }}">
        {{ section.settings.success_message }}
      </h3>
    </div>
  </div>
</div>

<script>
  (function() {
    const sectionId = '{{ section.id }}';
    const successMessage = document.getElementById('success_message_' + sectionId);
    const formGroup = document.querySelector('#shopify-section-' + sectionId + ' .newsletter-banner__form-group');
    
    function checkFormSubmission() {
      if (window.location.search === '?customer_posted=true' || window.location.hash === '#contact_form') {
        if (formGroup) {
          formGroup.style.display = 'none';
        }
        if (successMessage) {
          successMessage.style.display = 'block';
        }
      }
    }
    
    // Check on page load
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', checkFormSubmission);
    } else {
      checkFormSubmission();
    }
  })();
</script>

