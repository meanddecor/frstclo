{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .grid-style-{{ section.id }} {
    background: {{ section.settings.grid_background | default: '#f5f5f5' }};
  }

  .grid-style-{{ section.id }} .section-title h2 {
    font-size: {{ section.settings.heading_font_size }}px;
    font-weight: {{ section.settings.heading_font_weight }};
    text-transform: {{ section.settings.heading_transform }};
    letter-spacing: {{ section.settings.heading_letter_spacing }}px;
    color: {{ section.settings.heading_color }};
    text-align: center;
    margin: 0 0 40px 0;
  }

  .grid-style-{{ section.id }} .bordered-product-grid {
    display: grid;
    gap: 0;
    background: {{ section.settings.card_background }};
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
  }

  /* Responsive Grid Columns */
  @media (min-width: 1400px) {
    .grid-style-{{ section.id }} .bordered-product-grid {
      grid-template-columns: repeat({{ section.settings.columns_desktop_xl }}, 1fr);
    }
  }

  @media (min-width: 1024px) and (max-width: 1399px) {
    .grid-style-{{ section.id }} .bordered-product-grid {
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    }
  }

  @media (min-width: 750px) and (max-width: 1023px) {
    .grid-style-{{ section.id }} .bordered-product-grid {
      grid-template-columns: repeat({{ section.settings.columns_tablet }}, 1fr);
    }
  }

  @media (min-width: 480px) and (max-width: 749px) {
    .grid-style-{{ section.id }} .bordered-product-grid {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
    }
  }

  @media (max-width: 479px) {
    .grid-style-{{ section.id }} .bordered-product-grid {
      grid-template-columns: repeat({{ section.settings.columns_mobile_sm }}, 1fr);
    }
  }

  .grid-style-{{ section.id }} .bordered-product-card {
    border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
    background: {{ section.settings.card_background }};
    transition: transform {{ section.settings.hover_transition_duration }}ms ease;
    position: relative;
    margin-left: -{{ section.settings.border_width }}px;
    margin-top: -{{ section.settings.border_width }}px;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
  }

  .grid-style-{{ section.id }} .bordered-product-card:hover {
    transform: translateY(-{{ section.settings.hover_lift }}px);
    z-index: 10;
  }

  .grid-style-{{ section.id }} .bordered-product-image {
    width: 100%;
    padding-bottom: 100%;
    background: {{ section.settings.image_background }};
    position: relative;
    overflow: hidden;
    border-bottom: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
  }

  .grid-style-{{ section.id }} .bordered-product-image img {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: {{ section.settings.image_fill }}%;
    height: {{ section.settings.image_fill }}%;
    object-fit: contain;
    transition: transform 0.3s ease;
  }

  .grid-style-{{ section.id }} .bordered-product-card:hover .bordered-product-image img {
    transform: translate(-50%, -50%) scale({{ section.settings.image_hover_scale }});
  }

  .grid-style-{{ section.id }} .bordered-product-info {
    padding: {{ section.settings.card_padding }}px 15px;
    text-align: center;
    background: {{ section.settings.card_background }};
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 10px;
  }

  .grid-style-{{ section.id }} .bordered-product-title {
    font-size: {{ section.settings.product_title_font_size }}px;
    font-weight: {{ section.settings.product_title_font_weight }};
    text-transform: {{ section.settings.product_title_transform }};
    letter-spacing: {{ section.settings.product_title_letter_spacing }}px;
    line-height: 1.4;
    color: {{ section.settings.product_title_color }};
    text-decoration: none;
  }

  .grid-style-{{ section.id }} .bordered-product-price {
    font-size: {{ section.settings.product_price_font_size }}px;
    font-weight: {{ section.settings.product_price_font_weight }};
    color: {{ section.settings.product_price_color }};
  }

  .grid-style-{{ section.id }} .view-all-container {
    text-align: center;
    margin-top: 40px;
  }

  .grid-style-{{ section.id }} .view-all-button {
    display: inline-block;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    background: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: 600;
    transition: background 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .grid-style-{{ section.id }} .view-all-button:hover {
    background: {{ section.settings.button_hover_background }};
  }

  /* Mobile adjustments */
  @media (max-width: 749px) {
    .grid-style-{{ section.id }} .bordered-product-title {
      font-size: {{ section.settings.product_title_font_size | times: 0.85 | round: 0 }}px;
    }
    .grid-style-{{ section.id }} .bordered-product-price {
      font-size: {{ section.settings.product_price_font_size | times: 0.9 | round: 0 }}px;
    }
    .grid-style-{{ section.id }} .section-title h2 {
      font-size: {{ section.settings.heading_font_size | times: 0.75 | round: 0 }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign products_to_display = section.settings.collection.all_products_count

  if section.settings.collection.all_products_count > section.settings.products_to_show
    assign products_to_display = section.settings.products_to_show
    assign more_in_collection = true
  endif
-%}

<div class="grid-style-{{ section.id }} color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="section-title">
      <h2>{{ section.settings.title | escape }}</h2>
    </div>

    {%- if section.settings.description != blank -%}
      <div class="section-description rte" style="text-align: center; margin-bottom: 30px;">
        {{ section.settings.description }}
      </div>
    {%- endif -%}

    <div class="bordered-product-grid">
      {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
        <a href="{{ product.url }}" class="bordered-product-card">
          <div class="bordered-product-image">
            {%- if product.featured_media -%}
              <img
                srcset="
                  {%- if product.featured_media.width >= 165 -%}{{ product.featured_media | image_url: width: 165 }} 165w,{%- endif -%}
                  {%- if product.featured_media.width >= 360 -%}{{ product.featured_media | image_url: width: 360 }} 360w,{%- endif -%}
                  {%- if product.featured_media.width >= 533 -%}{{ product.featured_media | image_url: width: 533 }} 533w,{%- endif -%}
                  {%- if product.featured_media.width >= 720 -%}{{ product.featured_media | image_url: width: 720 }} 720w,{%- endif -%}
                  {%- if product.featured_media.width >= 940 -%}{{ product.featured_media | image_url: width: 940 }} 940w,{%- endif -%}
                  {%- if product.featured_media.width >= 1066 -%}{{ product.featured_media | image_url: width: 1066 }} 1066w,{%- endif -%}
                  {{ product.featured_media | image_url }} {{ product.featured_media.width }}w
                "
                src="{{ product.featured_media | image_url: width: 533 }}"
                sizes="(min-width: 1400px) calc((100vw - 130px) / {{ section.settings.columns_desktop_xl }}), (min-width: 1024px) calc((100vw - 130px) / {{ section.settings.columns_desktop }}), (min-width: 750px) calc((100vw - 130px) / {{ section.settings.columns_tablet }}), calc((100vw - 50px) / {{ section.settings.columns_mobile }})"
                alt="{{ product.featured_media.alt | escape }}"
                loading="lazy"
                width="{{ product.featured_media.width }}"
                height="{{ product.featured_media.height }}"
              >
            {%- else -%}
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          </div>
          <div class="bordered-product-info">
            <div class="bordered-product-title">{{ product.title }}</div>
            <div class="bordered-product-price">
              {%- if product.price_varies -%}
                {{ 'products.product.price.from_price_html' | t: price: product.price_min | money }}
              {%- else -%}
                {{ product.price | money }}
              {%- endif -%}
            </div>
          </div>
        </a>
      {%- else -%}
        {%- for i in (1..8) -%}
          <div class="bordered-product-card">
            <div class="bordered-product-image">
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
            <div class="bordered-product-info">
              <div class="bordered-product-title">Example Product</div>
              <div class="bordered-product-price">$99.00</div>
            </div>
          </div>
        {%- endfor -%}
      {%- endfor -%}
    </div>

    {%- if section.settings.show_view_all and more_in_collection -%}
      <div class="view-all-container">
        <a href="{{ section.settings.collection.url }}" class="view-all-button">
          {{ section.settings.button_label }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

