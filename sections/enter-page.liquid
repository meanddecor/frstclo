    /* Blocks container */
    .enter-blocks-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      width: 100%;
      position: relative;
      z-index: 10;
    }
    
    /* Individual block styles */
    .enter-block {
      position: absolute;
    }
    
    .enter-block--static {
      position: relative;
      margin: 10px 0;
    }
    
    /* Positioning presets */
    .enter-block--top-left {
      top: 5%;
      left: 5%;
    }
    
    .enter-block--top-center {
      top: 5%;
      left: 50%;
      transform: translateX(-50%);
    }
    
    .enter-block--top-right {
      top: 5%;
      right: 5%;
    }
    
    .enter-block--center-left {
      top: 50%;
      left: 5%;
      transform: translateY(-50%);
    }
    
    .enter-block--center {
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }
    
    .enter-block--menu.enter-block--center {
      left: 50%;
      transform: translate(-50%, -50%);
    }
    
    .enter-block--center-right {
      top: 50%;
      right: 5%;
      transform: translateY(-50%);
    }
    
    .enter-block--bottom-left {
      bottom: 5%;
      left: 5%;
    }
    
    .enter-block--bottom-center {
      bottom: 5%;
      left: 50%;
      transform: translateX(-50%);
    }
    
    .enter-block--bottom-right {
      bottom: 5%;
      right: 5%;
    }
    
