<script>
document.addEventListener('DOMContentLoaded', function() {
  // Update all datetime blocks
  function updateTime() {
    var today = new Date();
    var date = today.toLocaleDateString().replace(/\./g, '/');
    var hours = today.getHours();
    var suffix = hours >= 12 ? 'PM' : 'AM';
    hours = hours % 12 || 12;
    var minutes = today.getMinutes();
    var time = hours + ':' + (minutes < 10 ? '0' : '') + minutes + ' ' + suffix;
    var datetime = date + ' ' + time;
    
    // Update all datetime elements
    document.querySelectorAll('[id^="datetime-"]').forEach(function(el) {
      el.innerHTML = datetime;
    });
  }

  setInterval(updateTime, 1000);
  updateTime(); // Initial call
  
  // Two background animation support (if enabled in settings)
  {% if section.settings.show_two_bg %}
    var wrapper = document.querySelector('.enter-page-wrapper');
    var twoBgButton = document.querySelector('.two-bg-button');
    
    if (twoBgButton) {
      twoBgButton.addEventListener('click', function(e) {
        e.preventDefault();
        wrapper.style.backgroundImage = 'url(' + '{{ section.settings.two_bg_second | img_url: 'master' }}' + ')';
        
        // Hide all blocks except the background
        document.querySelectorAll('.enter-block').forEach(function(block) {
          block.style.display = 'none';
        });
        
        setTimeout(function() {
          window.location.href = '/collections/all';
        }, {{ section.settings.two_bg_seconds }} * 1000);
      });
    }
  {% endif %}
});
</script>

