      background: none !important;
    }
    
    /* Full page setup */
    body, html {
      height: 100vh;
      width: 100vw;
      overflow: hidden;
      padding: 0 !important;
      margin: 0 !important;
    }
    
    /* Main wrapper */
    .enter-page-wrapper {
      display: flex;
      justify-content: center;
      flex-direction: column;
      min-height: 100vh;
      align-items: center;
      z-index: 100;
      position: absolute;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      overflow: hidden;
      background-repeat: no-repeat;
      background-size: cover;
      background-position: center center;
      {% if section.settings.enter_background_image %}
        background-image: url({{ section.settings.enter_background_image | img_url: 'master' }});
      {% endif %}
    }
    
    {% if section.settings.enter_background_image_mobile %}
      @media screen and (max-width: 500px) {
        .enter-page-wrapper {
          background-image: url({{ section.settings.enter_background_image_mobile | img_url: 'master' }});
        }
      }
    {% endif %}
    
    {% if section.settings.show_solid_color_enter %}
      .enter-page-wrapper {
        background: {{ section.settings.solid_color_enter }};
        background: {{ section.settings.enter_gradient_color }};
      }
    {% endif %}
    
    /* Blocks container */
    .enter-blocks-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      width: 100%;
      position: relative;
      z-index: 10;
    }
    
    /* Individual block styles */
    .enter-block {
      position: absolute;
      /* Default: position from top-left corner */
      top: 0;
      left: 0;
      /* Content should wrap tightly */
      display: inline-flex;
      width: fit-content;
      height: fit-content;
    }
    
    .enter-block--static {
      position: relative;
      margin: 10px 0;
    }
    
    /* Positioning presets using viewport units for true responsiveness */
    /* All positions calculated from center (50vw, 50vh) using transforms */
    .enter-block--top-left {
      transform: translate(5vw, 5vh);
    }
    
    .enter-block--top-center {
      transform: translate(50vw, 5vh) translateX(-50%);
    }
    
    .enter-block--top-right {
      transform: translate(95vw, 5vh) translateX(-100%);
    }
    
    .enter-block--center-left {
      transform: translate(5vw, 50vh) translateY(-50%);
    }
    
    .enter-block--center {
      transform: translate(50vw, 50vh) translate(-50%, -50%);
    }
    
    .enter-block--center-right {
      transform: translate(95vw, 50vh) translate(-100%, -50%);
    }
    
    .enter-block--bottom-left {
      transform: translate(5vw, 95vh) translateY(-100%);
    }
    
    .enter-block--bottom-center {
      transform: translate(50vw, 95vh) translate(-50%, -100%);
    }
    
    .enter-block--bottom-right {
      transform: translate(95vw, 95vh) translate(-100%, -100%);
    }
    
    /* Custom positioning overrides presets with viewport-based transforms */
    .enter-block[data-custom-position="true"] {
      /* Custom positions are set inline via style attribute */
      /* They use transform: translate(Xvw, Yvh) for predictable movement */
    }
    
