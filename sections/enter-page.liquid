{% if section.settings.show_enter_page %}
  <style>
    /* CLEAN YEEZY/BALENCIAGA CENTER MINIMALIST LAYOUT */
    
    /* Reset & Base */
    body, html {
      height: 100vh;
      width: 100vw;
      overflow: hidden;
      padding: 0 !important;
      margin: 0 !important;
    }
    
    /* Hide default elements */
    #shopify-section-running-text,
    .bgimg,
    .header,
    .footer,
    #MainContent {
      display: none;
    }
    
    /* Main Wrapper - Center Minimalist Layout (Yeezy/Balenciaga Style) */
    .wrapper {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
      background-repeat: no-repeat;
      background-size: cover;
      background-position: center center;
      {% if section.settings.enter_background_image %}
        background-image: url({{ section.settings.enter_background_image | img_url: 'master' }});
      {% endif %}
    }
    
    /* Background overlay */
    .wrapper::after {
      content: "";
      position: fixed;
      left: 0;
      top: 0;
      height: 100vh;
      width: 100%;
      background: rgba(0, 0, 0, 0.4);
      z-index: -1;
      pointer-events: none;
    }
    
    {% if section.settings.enter_background_image_mobile %}
    @media screen and (max-width: 768px) {
      .wrapper {
        background-image: url({{ section.settings.enter_background_image_mobile | img_url: 'master' }});
      }
    }
    {% endif %}
    
    {% if section.settings.show_solid_color_enter %}
    .wrapper {
      background: {{ section.settings.solid_color_enter }};
      background: {{ section.settings.enter_gradient_color }};
    }
    .wrapper::after {
      display: none;
    }
    {% endif %}
    
    /* Video Background */
    #bg-video,
    #bg-video_mobile {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: -2;
    }
    
    #bg-video_mobile {
      display: none;
    }
    
    {% if section.settings.show_video_bg %}
    .wrapper {
      background-image: none;
    }
    {% endif %}
    
    {% if section.settings.background_video_url_mobile %}
    @media screen and (max-width: 768px) {
      #bg-video {
        display: none;
      }
      #bg-video_mobile {
        display: block;
      }
    }
    {% endif %}
    
    {% if section.settings.show_two_bg %}
    .wrapper {
      background-image: url({{ section.settings.two_bg_first | img_url: 'master'}});
    }
    #bg-video,
    #bg-video_mobile {
      display: none;
    }
    {% endif %}
    
    /* Enter Container - Center Minimalist */
    .enter-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      width: fit-content;
      z-index: 10;
    }
    
    /* Logo */
    .enter-logo {
      margin-bottom: 80px;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
    
    .logo_enter {
      width: {{ section.settings.logoenter_size }}px;
      max-width: 100%;
      height: auto;
      display: block;
    }
    
    #datetime {
      font-size: {{ section.settings.date_time_size }}px;
      color: {{ section.settings.date_time_color }} !important;
      margin-top: 20px;
      margin-bottom: 0;
      font-weight: 400;
      letter-spacing: 0.5px;
      text-align: center;
    }
    
    /* Menu - Center Minimalist */
    .enter-menu {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      width: 100%;
      max-width: 500px;
    }
    
    .menu-list {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    
    .menu-item {
      width: fit-content;
      margin-bottom: {{ section.settings.enter_menu_space }}px;
      text-align: center;
    }
    
    .menu-link {
      padding: 10px 20px;
      display: block;
      text-transform: {{ section.settings.menu_text_transform }};
      font-size: {{ section.settings.menu_font_size }}px;
      color: {{ section.settings.menu_text_color }};
      text-decoration: none;
      opacity: 1;
      transition: opacity 0.3s ease;
      text-align: center;
      {% if section.settings.show_text_glow %}
        animation: textPulse 2s ease-in-out infinite alternate;
      {% endif %}
    }
    
    /* Opacity hover effect on desktop */
    @media screen and (min-width: 769px) {
      .enter-menu:hover .menu-link {
        opacity: 0.5;
      }
      
      .enter-menu .menu-item:hover .menu-link {
        opacity: 1;
      }
    }
    
    {% if section.settings.enable_menu_highlight %}
    .menu-link:hover {
      background: {{ section.settings.menu_highlight_color }};
    }
    {% endif %}
    
    /* Enter Button */
    .enter-button {
      width: 100%;
      display: flex;
      justify-content: center;
    }
    
    .enter-button a,
    .two_bg_enter_button a {
      padding: 10px 30px;
      display: block;
      text-transform: {{ section.settings.menu_text_transform }};
      font-size: {{ section.settings.menu_font_size }}px;
      color: {{ section.settings.menu_text_color }} !important;
      text-decoration: none;
      opacity: 1;
      transition: opacity 0.3s ease;
      cursor: pointer;
      text-align: center;
      {% if section.settings.show_text_glow %}
        animation: textPulse 2s ease-in-out infinite alternate;
      {% endif %}
    }
    
    @media screen and (min-width: 769px) {
      .enter-button a:hover,
      .two_bg_enter_button a:hover {
        opacity: 0.7;
      }
    }
    
    {% if section.settings.show_two_bg %}
    .enter-button {
      display: none;
    }
    .menu-list {
      display: none;
    }
    {% endif %}
    
    /* Footer - Bottom Center (Yeezy/Balenciaga Style) */
    .enter-footer {
      position: fixed;
      bottom: 40px;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      flex-direction: column;
      gap: 20px;
      align-items: center;
      justify-content: center;
      z-index: 10;
    }
    
    {% if section.settings.show_enterfooter == false %}
    .enter-footer {
      opacity: 0;
      pointer-events: none;
    }
    {% endif %}
    
    .list-social {
      display: flex;
      gap: 24px;
      list-style: none;
      padding: 0;
      margin: 0;
      justify-content: center;
      align-items: center;
    }
    
    .list-social__item svg {
      width: 20px;
      height: 20px;
      color: {{ section.settings.icons_color }};
      transition: opacity 0.3s ease;
    }
    
    .list-social__item a:hover svg {
      opacity: 0.7;
    }
    
    .enter-copyright {
      display: flex;
      gap: 20px;
      align-items: center;
      justify-content: center;
      flex-wrap: wrap;
    }
    
    .copyright__content,
    .copyright__content a {
      font-size: 11px;
      font-weight: 400;
      letter-spacing: 0.5px;
      color: {{ section.settings.copy_text_color }} !important;
      text-decoration: none;
      text-transform: uppercase;
      text-align: center;
    }
    
    /* Skip Button */
    .enter-skip {
      position: fixed;
      bottom: 30px;
      right: 30px;
      z-index: 20;
    }
    
    .enter-skip-button {
      font-size: {{ section.settings.enter_skip_button_size }}px;
      font-weight: 400;
      letter-spacing: 1px;
      color: {{ section.settings.enter_skip_button_color }} !important;
      text-decoration: none;
      text-transform: uppercase;
      transition: opacity 0.3s ease;
    }
    
    .enter-skip-button:hover {
      opacity: 0.7;
    }
    
    /* Text Glow Animation */
    @keyframes textPulse {
      from {
        text-shadow: 0 0 0px {{section.settings.menu_text_glow_color}};
      }
      to {
        text-shadow: 0 0 15px {{section.settings.menu_text_glow_color}},
                   0 0 30px {{section.settings.menu_text_glow_color}};
      }
    }
    
    /* Responsive - Maintain Center Layout */
    @media screen and (max-width: 768px) {
      .wrapper {
        padding: 0 20px;
      }
      
      .logo_enter {
        width: {{ section.settings.logoenter_size_mobile }}px !important;
      }
      
      .enter-logo {
        margin-bottom: 40px;
      }
      
      .menu-link,
      .enter-button a,
      .two_bg_enter_button a {
        font-size: clamp(16px, {{ section.settings.menu_font_size }}px, 20px);
      }
      
      .enter-footer {
        left: 50%;
        transform: translateX(-50%);
        bottom: 30px;
        flex-direction: column;
        align-items: center;
        gap: 18px;
        width: 90%;
        max-width: 400px;
      }
      
      .list-social {
        gap: 20px;
      }
      
      .enter-copyright {
        flex-direction: column;
        align-items: center;
        gap: 8px;
        text-align: center;
      }
      
      .enter-skip {
        bottom: 20px;
        right: 20px;
      }
      
      @keyframes textPulse {
        from {
          text-shadow: 0 0 0px {{section.settings.menu_text_glow_color}};
        }
        to {
          text-shadow: 0 0 8px {{section.settings.menu_text_glow_color}},
                     0 0 15px {{section.settings.menu_text_glow_color}};
        }
      }
    }
