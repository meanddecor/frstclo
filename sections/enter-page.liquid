<script>
document.addEventListener('DOMContentLoaded', function() {
  var wrapper = document.querySelector('.wrapper');
  var enterButton = document.querySelector('.two_bg_enter_button');
  var enterContainer = document.querySelector('.enter-container');
  var footer = document.querySelector('.enter-footer');
  var skipButton = document.querySelector('.enter-skip');
  
  if ({{ section.settings.show_two_bg }}) {
    if (enterButton) {
      enterButton.addEventListener('click', function() {
        wrapper.style.backgroundImage = 'url(' + '{{ section.settings.two_bg_second | img_url: 'master' }}' + ')';
        if (enterContainer) enterContainer.style.display = 'none';
        if (footer) footer.style.display = 'none';
        if (skipButton) skipButton.style.display = 'none';
        setTimeout(function() {
          window.location.href = '/collections/all';
        }, {{ section.settings.two_bg_seconds }} * 1000);
      });
    }
  }
});
</script>
<script>
  function updateTime() {
    var today = new Date();
    var date = today.toLocaleDateString().replace(/\./g, '/');
    var hours = today.getHours();
    var suffix = hours >= 12 ? 'PM' : 'AM';
    hours = hours % 12 || 12;
    var minutes = today.getMinutes();
    var time = hours + ':' + (minutes < 10 ? '0' : '') + minutes + ' ' + suffix;
    var datetime = date + ' ' + time;
    var datetimeElement = document.getElementById("datetime");
    if (datetimeElement) {
      datetimeElement.innerHTML = datetime;
    }
  }

  setInterval(updateTime, 1000);
</script>

