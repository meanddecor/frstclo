{%- style -%}
  #Banner-{{ section.id }}::after {
    opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
  }

  {%- if section.settings.image_height == 'adapt-image' and section.settings.image != blank -%}
    @media screen and (max-width: 749px) {
      #Banner-{{ section.id }}:not(.banner--mobile-bottom) .banner__content::before {
        padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }

    #Banner-{{ section.id }}::before,
    #Banner-{{ section.id }} .banner__media::before {
      padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;
      content: '';
      display: block;
    }
  {%- endif -%}

  {%- if section.settings.form_style == 'waitlist' -%}
    {%- liquid
      assign container_bg = section.settings.waitlist_container_bg | default: settings.color_button | default: '#000'
      assign input_color = section.settings.waitlist_input_color | default: settings.color_button_text | default: '#fff'
      assign button_bg = section.settings.waitlist_button_bg | default: settings.color_button | default: '#000'
      assign button_color = section.settings.waitlist_button_color | default: settings.color_button_text | default: '#fff'
      assign border_color = section.settings.waitlist_border_color | default: container_bg
      assign border_width = section.settings.waitlist_border_width | default: settings.input_border_width | default: 1
      assign border_radius = section.settings.waitlist_border_radius | default: settings.input_radius | default: 4
      assign input_height = section.settings.waitlist_input_height | default: settings.input_height | default: 40
      assign font_size = section.settings.waitlist_font_size | default: settings.font_size_base | default: 14
      assign button_padding = section.settings.waitlist_button_padding | default: settings.button_padding_horizontal | default: 20
      assign button_font_weight = settings.font_weight_heading | default: 700
      assign body_font_family = settings.type_body_font.family | default: 'inherit'
    -%}

    #Banner-{{ section.id }} .waitlist-form__field-wrapper {
      display: flex;
      justify-content: center;
    }

    #Banner-{{ section.id }} .waitlist-subscribe-box {
      display: flex;
      border: {{ border_width }}px solid {{ border_color }};
      width: 100%;
      max-width: {{ section.settings.waitlist_max_width | default: 300 }}px;
      height: {{ input_height }}px;
      background-color: {{ container_bg }};
      overflow: hidden;
      border-radius: {{ border_radius }}px;
    }

    #Banner-{{ section.id }} .waitlist-subscribe-input {
      flex: 1;
      padding: 0 {{ border_width | times: 10 }}px;
      border: none;
      outline: none;
      font-size: {{ font_size }}px;
      font-family: {{ body_font_family }};
      background: transparent;
      color: {{ input_color }};
    }

    #Banner-{{ section.id }} .waitlist-subscribe-input::placeholder {
      color: {{ input_color }};
      opacity: 0.7;
    }

    #Banner-{{ section.id }} .waitlist-subscribe-button {
      background-color: {{ button_bg }};
      color: {{ button_color }};
      border: none;
      padding: 0 {{ button_padding }}px;
      font-weight: {{ button_font_weight }};
      font-family: {{ body_font_family }};
      cursor: pointer;
      transition: background 0.2s ease;
      display: flex;
      align-items: center;
      text-transform: {% if settings.button_uppercase %}uppercase{% else %}none{% endif %};
      {% if section.settings.waitlist_show_button_separator -%}
      border-left: 1px solid {{ input_color }};
      {%- endif %}
    }

    #Banner-{{ section.id }} .waitlist-subscribe-button:hover {
      opacity: 0.9;
    }
  {%- endif -%}

  {%- if section.settings.enable_password_link -%}
    {%- assign modal_bg = section.settings.password_modal_bg_color | default: settings.color_background | default: '#ffffff' -%}

    #Banner-{{ section.id }} .password-link-wrapper {
      padding-top: {{ section.settings.password_link_padding_top | default: 20 }}px;
      padding-bottom: {{ section.settings.password_link_padding_bottom | default: 0 }}px;
      padding-left: {{ section.settings.password_link_padding_left | default: 0 }}px;
      padding-right: {{ section.settings.password_link_padding_right | default: 0 }}px;
      text-align: {{ section.settings.password_link_align | default: 'center' }};
    }

    #Banner-{{ section.id }} .password-link {
      font-size: {{ section.settings.password_link_font_size | default: 14 }}px;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    #Banner-{{ section.id }} .password-link__icon {
      display: inline-flex;
      align-items: center;
    }

    #Banner-{{ section.id }} .password-link__icon svg,
    #Banner-{{ section.id }} .password-link__icon img {
      width: 1.25em;
      height: 1.25em;
      display: block;
    }

    #Banner-{{ section.id }} .password-link__icon-image {
      object-fit: contain;
    }

    #Banner-{{ section.id }} .password-link__text {
      font-size: inherit;
    }

    #Banner-{{ section.id }} .password-modal__content {
      background-color: {{ modal_bg }} !important;
    }

    #Banner-{{ section.id }} .modal__content {
      background: transparent;
    }
  {%- endif -%}
{%- endstyle -%}

<div
  id="Banner-{{ section.id }}"
  class="email-signup-banner banner banner--content-align-{{ section.settings.desktop_content_alignment }} banner--content-align-mobile-{{ section.settings.mobile_content_alignment }} banner--{{ section.settings.image_height }}{% if section.settings.image_height == 'adapt-image' and section.settings.image != blank %} banner--adapt{% endif %}{% if section.settings.show_text_below %} banner--mobile-bottom{%- endif -%}{% if section.settings.show_text_box == false %} banner--desktop-transparent{% endif %}"
>
  {%- if section.settings.show_background_image -%}
    <div class="banner__media{% if section.settings.image != blank %} media{% endif %}">
      {%- if section.settings.image != blank -%}
        <img
          srcset="
            {%- if section.settings.image.width >= 375 -%}{{ section.settings.image | image_url: width: 375 }} 375w,{%- endif -%}
            {%- if section.settings.image.width >= 750 -%}{{ section.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
            {%- if section.settings.image.width >= 1100 -%}{{ section.settings.image | image_url: width: 1100 }} 1100w,{%- endif -%}
            {%- if section.settings.image.width >= 1500 -%}{{ section.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}
            {%- if section.settings.image.width >= 1780 -%}{{ section.settings.image | image_url: width: 1780 }} 1780w,{%- endif -%}
            {%- if section.settings.image.width >= 2000 -%}{{ section.settings.image | image_url: width: 2000 }} 2000w,{%- endif -%}
            {%- if section.settings.image.width >= 3000 -%}{{ section.settings.image | image_url: width: 3000 }} 3000w,{%- endif -%}
            {%- if section.settings.image.width >= 3840 -%}{{ section.settings.image | image_url: width: 3840 }} 3840w,{%- endif -%}
            {{ section.settings.image | image_url }} {{ section.settings.image.width }}w
          "
          sizes="100vw"
          src="{{ section.settings.image | image_url: width: 1500 }}"
          loading="{% if settings.image_lazy_loading %}lazy{% else %}eager{% endif %}"
          alt="{{ section.settings.image.alt | escape }}"
          width="{{ section.settings.image.width }}"
          height="{{ section.settings.image.width | divided_by: section.settings.image.aspect_ratio }}"
        >
      {%- else -%}
        {%- render 'email-signup-banner-background' -%}
        {%- render 'email-signup-banner-background-mobile' -%}
      {%- endif -%}
    </div>
  {%- endif -%}
  <div class="banner__content banner__content--{{ section.settings.desktop_content_position }} page-width">
    <div class="email-signup-banner__box banner__box newsletter newsletter__wrapper isolate{% if section.settings.show_background_image == false %} email-signup-banner__box--no-image{% endif %} content-container color-{{ section.settings.color_scheme }} gradient content-container--full-width-mobile">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <h2 class="email-signup-banner__heading {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
              {{ block.settings.heading | escape }}
            </h2>
          {%- when 'paragraph' -%}
            <div class="newsletter__subheading rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
              {{ block.settings.text }}
            </div>
          {%- when 'email_form' -%}
            <div {{ block.shopify_attributes }}>
              {% form 'customer', class: 'newsletter-form' %}
                {% assign form_id = 'NewsletterForm--' | append: section.id %}
                <input type="hidden" name="contact[tags]" value="newsletter">
                <div class="newsletter-form__field-wrapper{% if section.settings.form_style == 'waitlist' %} waitlist-form__field-wrapper{% endif %}">
                  {% if section.settings.form_style == 'waitlist' %}
                    <div class="waitlist-subscribe-box">
                      <input
                        id="{{ form_id }}"
                        type="email"
                        name="contact[email]"
                        class="waitlist-subscribe-input"
                        value="{{ form.email }}"
                        aria-required="true"
                        autocorrect="off"
                        autocapitalize="off"
                        autocomplete="email"
                        {% if form.errors %}
                          autofocus
                          aria-invalid="true"
                          aria-describedby="Newsletter-error--{{ section.id }}"
                        {% elsif form.posted_successfully? %}
                          aria-describedby="Newsletter-success--{{ section.id }}"
                        {% endif %}
                        placeholder="{{ section.settings.waitlist_input_placeholder }}"
                        aria-label="{{ section.settings.waitlist_input_placeholder }}"
                        required
                      >
                      <button
                        type="submit"
                        class="waitlist-subscribe-button"
                        name="commit"
                        id="Subscribe"
                        aria-label="{{ section.settings.waitlist_button_text }}"
                      >
                        {{ section.settings.waitlist_button_text }}
                      </button>
                    </div>
                  {% else %}
                    {% if section.settings.enable_first_name %}
                      <div class="field firstname">
                        <input
                          type="text"
                          name="contact[first_name]"
                          id="{{ form_id }}-first_name"
                          class="field__input{% if form.errors %} input--error{% endif %}"
                          value=""
                          placeholder="Name"
                          aria-label="Name"
                          aria-required="true"
                          autocorrect="off"
                          autocapitalize="off"
                          {% if form.errors %}
                            aria-invalid="true"
                            data-form-status
                          {% endif %}
                        >
                        <label class="field__label" for="{{ form_id }}-first_name">Name</label>
                      </div>
                    {% endif %}
                    <div class="field">
                      <input
                        id="{{ form_id }}"
                        type="email"
                        name="contact[email]"
                        class="field__input"
                        value="{{ form.email }}"
                        aria-required="true"
                        autocorrect="off"
                        autocapitalize="off"
                        autocomplete="email"
                        {% if form.errors %}
                          autofocus
                          aria-invalid="true"
                          aria-describedby="Newsletter-error--{{ section.id }}"
                        {% elsif form.posted_successfully? %}
                          aria-describedby="Newsletter-success--{{ section.id }}"
                        {% endif %}
                        placeholder="{{ 'newsletter.label' | t }}"
                        required
                      >
                      <label class="field__label" for="{{ form_id }}">
                        {{ 'newsletter.label' | t }}
                      </label>
                    </div>
                    <button
                      type="submit"
                      style="margin-top: 14px;"
                      class="button"
                      name="commit"
                      id="Subscribe"
                      aria-label="{{ 'newsletter.button_label' | t }}"
                    >
                      SEND
                    </button>
                  {% endif %}
                  {%- if form.errors -%}
                    <small class="newsletter-form__message form__message" id="Newsletter-error--{{ section.id }}">
                      {%- render 'icon-error' -%}
                      {{- form.errors.translated_fields.email | capitalize }}
                      {{ form.errors.messages.email -}}
                    </small>
                  {%- endif -%}
                </div>
                {%- if form.posted_successfully? -%}
                  <h3
                    class="newsletter-form__message newsletter-form__message--success form__message"
                    id="Newsletter-success--{{ section.id }}"
                    tabindex="-1"
                    autofocus
                  >
                    {% render 'icon-success' -%}
                    {{- 'newsletter.success' | t }}
                  </h3>
                {%- endif -%}
              {% endform %}
            </div>
        {%- endcase -%}
      {%- endfor -%}

      {%- if section.settings.enable_password_link -%}
        {%- liquid
          assign password_link_text = section.settings.password_link_text
          if password_link_text == blank
            assign password_link_text = 'general.password_page.login_password_button' | t
          endif
          assign password_icon_type = section.settings.password_link_icon_type | default: 'theme_icon'
          assign password_modal_bg = section.settings.password_modal_bg_color | default: settings.color_background | default: '#ffffff'
        -%}
        <div class="password-link-wrapper">
          <password-modal>
            <details class="password-modal modal">
              <summary class="modal__toggle" aria-haspopup="dialog">
                <div class="modal__toggle-open password-link link underlined-link">
                  <span class="password-link__icon" aria-hidden="true">
                    {% case password_icon_type %}
                      {% when 'custom_svg' %}
                        {% if section.settings.password_link_icon_svg != blank %}
                          {{ section.settings.password_link_icon_svg }}
                        {% else %}
                          {% render 'icon-padlock' %}
                        {% endif %}
                      {% when 'custom_image' %}
                        {% if section.settings.password_link_icon_image != blank %}
                          {{
                            section.settings.password_link_icon_image
                            | image_url: width: 64
                            | image_tag: class: 'password-link__icon-image', alt: '', loading: settings.image_lazy_loading
                          }}
                        {% else %}
                          {% render 'icon-padlock' %}
                        {% endif %}
                      {% else %}
                        {% render 'icon-padlock' %}
                    {% endcase %}
                  </span>
                  <span class="password-link__text">{{ password_link_text }}</span>
                </div>
                <div class="modal__toggle-close" aria-hidden="true">
                  {% render 'icon-close' %}
                </div>
              </summary>
              <div
                class="modal__content"
                role="dialog"
                aria-labelledby="PasswordDialogHeading-{{ section.id }}"
                aria-modal="true"
              >
                <div class="password-modal__content" tabindex="-1" style="background-color: {{ password_modal_bg }};">
                  <button type="button" class="modal__close-button link" aria-label="{{ 'accessibility.close' | t }}">
                    {% render 'icon-close' %}
                  </button>
                  <h2 class="password-modal__content-heading" id="PasswordDialogHeading-{{ section.id }}">
                    {{ 'general.password_page.login_form_heading' | t }}
                  </h2>
                  {%- form 'storefront_password', class: 'password-form' -%}
                    <div class="password-field field{% if form.errors %} password-field--error{% endif %}">
                      <input
                        type="password"
                        name="password"
                        id="Password-{{ section.id }}"
                        class="field__input"
                        autocomplete="current-password"
                        {% if form.errors %}
                          aria-invalid="true"
                          aria-describedby="PasswordLoginForm-password-error-{{ section.id }}"
                        {%- endif -%}
                        placeholder="{{ 'general.password_page.login_form_password_placeholder' | t }}"
                      >
                      <label class="field__label" for="Password-{{ section.id }}">
                        {{- 'general.password_page.login_form_password_placeholder' | t -}}
                      </label>
                      {%- if form.errors -%}
                        <div id="PasswordLoginForm-password-error-{{ section.id }}" role="status">
                          <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
                          <span class="form__message">
                            {%- render 'icon-error' %}
                            {{ 'general.password_page.login_form_error' | t -}}
                          </span>
                        </div>
                      {%- endif -%}
                    </div>
                    <button name="commit" class="password-button button button--outline">
                      {{ 'general.password_page.login_form_submit' | t }}
                    </button>
                  {%- endform -%}
                  <small class="password__footer-text">{{ 'general.password_page.admin_link_html' | t }}</small>
                </div>
              </div>
            </details>
          </password-modal>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

