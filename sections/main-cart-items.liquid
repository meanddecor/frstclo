<script>
  if (typeof window !== 'undefined') {
    document.addEventListener('DOMContentLoaded', function() {
      const quantityWrappers = document.querySelectorAll('.quantity-wrapper');
      
      if (!quantityWrappers || quantityWrappers.length === 0) return;
      
      quantityWrappers.forEach(wrapper => {
        if (!wrapper) return;
        
        const minusBtn = wrapper.querySelector('.cart__quantity-btn-minus');
        const plusBtn = wrapper.querySelector('.cart__quantity-btn-plus');
        const quantityValue = wrapper.querySelector('.cart__quantity-value');
        const quantityInput = wrapper.querySelector('input[data-quantity-input]');
        
        if (!minusBtn || !plusBtn || !quantityValue || !quantityInput) return;
        
        minusBtn.addEventListener('click', function(e) {
          e.preventDefault();
          let currentQty = parseInt(quantityValue.textContent);
          if (currentQty > 1) {
            currentQty--;
            quantityValue.textContent = currentQty;
            quantityInput.value = currentQty;
            
            if (currentQty === 1) {
              minusBtn.classList.add('disabled');
              minusBtn.disabled = true;
            }
            
            updateLinePrice(wrapper, currentQty);
            updateCart();
          }
        });
        
        plusBtn.addEventListener('click', function(e) {
          e.preventDefault();
          let currentQty = parseInt(quantityValue.textContent);
          currentQty++;
          quantityValue.textContent = currentQty;
          quantityInput.value = currentQty;
          
          if (currentQty > 1) {
            minusBtn.classList.remove('disabled');
            minusBtn.disabled = false;
          }
          
          updateLinePrice(wrapper, currentQty);
          updateCart();
        });
      });
      
      function updateLinePrice(wrapper, quantity) {
        const unitPrice = parseFloat(wrapper.dataset.unitPrice);
        const linePrice = quantity * unitPrice;
        const linePriceElement = wrapper.closest('.cart__item').querySelector('.cart__item-main-span');
        
        // Format as currency
        const formattedPrice = new Intl.NumberFormat('en-US', {
          style: 'currency',
          currency: 'USD'
        }).format(linePrice / 100);
        
        linePriceElement.textContent = formattedPrice;
        
        // Update cart total
        updateCartTotal();
      }
      
      function updateCartTotal() {
        const form = document.querySelector('.cart__form');
        if (!form) return;
        
        let total = 0;
        const wrappers = form.querySelectorAll('.quantity-wrapper');
        wrappers.forEach(wrapper => {
          const unitPrice = parseFloat(wrapper.dataset.unitPrice);
          const quantity = parseInt(wrapper.querySelector('.cart__quantity-value').textContent);
          total += unitPrice * quantity;
        });
        
        const totalElement = document.querySelector('.cart__total');
        if (totalElement) {
          const formattedTotal = new Intl.NumberFormat('en-US', {
            style: 'currency',
            currency: 'USD'
          }).format(total / 100);
          totalElement.textContent = 'TOTAL: ' + formattedTotal + ' USD';
        }
      }
      
      function updateCart() {
        const form = document.querySelector('.cart__form');
        if (!form) return;
        
        const inputs = form.querySelectorAll('input[data-quantity-input]');
        if (!inputs || inputs.length === 0) return;
        
        const updates = {};
        inputs.forEach(input => {
          const wrapper = input.closest('.quantity-wrapper');
          if (wrapper && wrapper.dataset.key) {
            updates[wrapper.dataset.key] = parseInt(input.value) || 0;
          }
        });
        
        fetch('/cart/update', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ updates: updates })
        })
        .then(response => {
          if (!response.ok) throw new Error('Network response was not ok');
          return response.json();
        })
        .then(data => {
          location.reload();
        })
        .catch(error => {
          console.error('Cart update error:', error);
        });
      }
    });
  }
</script>

<cart-items class="page-width{% if cart == empty %} is-empty{% else %} section-{{ section.id }}-padding{% endif %}">
  <div class="title-wrapper-with-link">
    <h1 class="title title--primary">{{ 'sections.cart.title' | t }}</h1>
    <a href="{{ routes.all_products_collection_url }}" class="underlined-link">{{ 'general.continue_shopping' | t }}</a>
  </div>

  <div class="cart__warnings">
    <h1 class="cart__empty-text">{{ 'sections.cart.empty' | t }}</h1>
    <a href="{{ routes.all_products_collection_url }}" class="button">
      {{ 'general.continue_shopping' | t }}
    </a>

    {%- if shop.customer_accounts_enabled and customer == null -%}
      <h2 class="cart__login-title">{{ 'sections.cart.login.title' | t }}</h2>
      <p class="cart__login-paragraph">
        {{ 'sections.cart.login.paragraph_html' | t: link: routes.account_login_url }}
      </p>
    {%- endif -%}
  </div>

  <form action="{{ routes.cart_url }}" class="cart__form" method="post" id="cart">
    <div class="cart__items" id="main-cart-items" data-id="{{ section.id }}">
      <div class="js-contents">
        {%- if cart != empty -%}
          {%- for item in cart.items -%}
            <div class="cart__item" id="CartItem-{{ item.index | plus: 1 }}">
              {% if item.image %}
                <img
                  class="cart__item-img"
                  src="{{ item.image | image_url: width: 300 }}"
                  alt="{{ item.image.alt | escape }}"
                  loading="lazy"
                >
              {% endif %}

              <div class="cart__item-heading">
                <h2 class="cart__item-title">{{ item.product.title | escape }}</h2>
                <a class="cart__item-remove-link" href="{{ item.url_to_remove }}">Remove</a>
              </div>

              <p class="cart__item-final-price" data-unit-price="{{ item.final_price }}">
                <span class="cart__item-title-span">Price</span>
                <span class="cart__item-main-span" data-line-price="{{ item.key }}">{{ item.final_line_price | money }}</span>
              </p>

              <div class="cart__item-quantity">
                <span class="cart__item-title-span">Quantity</span>
                <div class="quantity-wrapper" 
                     data-key="{{ item.key }}" 
                     data-quantity="{{ item.quantity }}"
                     data-unit-price="{{ item.final_price }}"
                     data-inventory="0"
                     data-track-quantity="false"
                     data-allow-oversell="deny">
                  <button class="cart__quantity-btn cart__quantity-btn-minus{% if item.quantity <= 1 %} disabled{% endif %}" 
                          type="button"
                          {% if item.quantity <= 1 %}disabled{% endif %}>
                    —
                  </button>
                  <input type="hidden" name="updates[]" value="{{ item.quantity }}" data-quantity-input>
                  <span class="cart__quantity-value" id="quantity-{{ item.key }}">{{ item.quantity }}</span>
                  <button class="cart__quantity-btn cart__quantity-btn-plus" type="button">
                    +
                  </button>
                </div>
              </div>
            </div>
          {%- endfor -%}
        {%- endif -%}
      </div>
    </div>

    <div class="checkout-elements">
      <p class="cart__total">TOTAL: {{ cart.total_price | money }} USD</p>
      <button type="submit" name="checkout" class="cart__submit-btn button">
        CHECKOUT
      </button>
    </div>

    <p class="visually-hidden" id="cart-live-region-text" aria-live="polite" role="status"></p>
    <p class="visually-hidden" id="shopping-cart-line-item-status" aria-live="polite" aria-hidden="true" role="status">
      {{ 'accessibility.loading' | t }}
    </p>
  </form>
</cart-items>

