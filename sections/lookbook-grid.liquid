<div class="lookbook-container" style="padding: {{ section.settings.padding_top }}px 20px {{ section.settings.padding_bottom }}px;">
  <div class="lookbook-header-content" style="flex-direction: column; align-items: {{ section.settings.header_alignment }};">
    <div class="lookbook-header-top">
      {% if section.settings.cta_text != blank and section.settings.cta_link != blank %}
        <a href="{{ section.settings.cta_link }}" class="lookbook-cta" style="text-align: {{ section.settings.header_alignment }}; color: {{ section.settings.cta_color }};">{{ section.settings.cta_text }}</a>
      {% endif %}
      {% if section.settings.title != blank %}
        <h3 class="lookbook-title" style="color: {{ section.settings.title_color }}; text-align: {{ section.settings.header_alignment }};">{{ section.settings.title }}</h3>
      {% endif %}
    </div>
    {% if section.settings.description != blank %}
      <div class="lookbook-description" style="color: {{ section.settings.description_color }}; text-align: {{ section.settings.header_alignment }}; max-width: {{ section.settings.max_width }}px;">{{ section.settings.description }}</div>
    {% endif %}
  </div>

  <div class="lookbook-grid" style="grid-template-columns: repeat({{ section.settings.grid_columns_desktop }}, 1fr); gap: {{ section.settings.grid_gap }}px;" data-desktop-cols="{{ section.settings.grid_columns_desktop }}" data-tablet-cols="{{ section.settings.grid_columns_tablet }}" data-mobile-cols="{{ section.settings.grid_columns_mobile }}" data-gap="{{ section.settings.grid_gap }}" data-radius="{{ section.settings.image_border_radius }}">
    {% for block in section.blocks %}
      <div class="lookbook-item" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          <img 
            src="{{ block.settings.image | image_url: width: 1024 }}" 
            alt="{{ block.settings.alt_text | default: section.settings.title }}" 
            class="lookbook-image"
            loading="lazy"
            style="border-radius: {{ section.settings.image_border_radius }}px;">
        {% else %}
          <div class="lookbook-placeholder" style="background-color: #f0f0f0; aspect-ratio: 2/3; border-radius: {{ section.settings.image_border_radius }}px; display: flex; align-items: center; justify-content: center; color: #999;">
            <span>Add image</span>
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>

  <!-- Add this new slider container -->
  <div id="slider-backdrop" class="slider-backdrop"></div>

  <div id="lookbook-slider" class="lookbook-slider">
    <div class="slider-close">
      <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M2 2L18 18M18 2L2 18" stroke="#fff" stroke-width="2.5" stroke-linecap="round"/>
      </svg>
    </div>

    <div class="slider-content">
      {% for block in section.blocks %}
        {% if block.settings.image != blank %}
          <img 
            src="{{ block.settings.image | image_url: width: 2048 }}" 
            alt="{{ block.settings.alt_text | default: section.settings.title }}" 
            class="slider-image"
            loading="lazy">
        {% endif %}
      {% endfor %}
    </div>

    <!-- Desktop scroll indicator with chevron icon -->
    <div class="scroll-indicator desktop-only" {% unless section.settings.show_scroll_animation %}style="display: none;"{% endunless %}>
      <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg" class="chevron-icon">
        <circle cx="20" cy="20" r="19" stroke="{{ section.settings.scroll_animation_color }}" stroke-width="2" opacity="0.7"/>
        <path d="M12 16L20 24L28 16" stroke="{{ section.settings.scroll_animation_color }}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>

    <!-- Add a new mobile-only class to the SVG -->
    <svg id="Swipe-horizontal_1" class="mobile-only" data-name="Swipe horizontal 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200" style="position: fixed;
      bottom: 80px;
      left: 50%;
      transform: translateX(-50%);
      width: 100px;
      height: 99px;
      z-index: 1002;
      {% unless section.settings.show_scroll_animation %}display: none;{% endunless %}">
        <path class="hand-x" d="M139.93,113.56l-41.12-6.93V76.08a9.25,9.25,0,0,0-9.25-9.25h0a9.25,9.25,0,0,0-9.25,9.25v57.36L71,122.65c-3.61-3.61-8.44-3.89-13.08,0,0,0-7.24,5.84-3.83,9.25l34,34h42.63a9.25,9.25,0,0,0,9.07-7.43l6.82-34.09A9.28,9.28,0,0,0,139.93,113.56Z" style="fill: {{ section.settings.swipe_hand_color }};"></path>
    </svg>

    <!-- Inside the lookbook-slider div, update the slider-caption div -->
    <div id="slider-caption" class="slider-caption" style="background-color: {{ section.settings.slider_caption_bg_color }}; color: {{ section.settings.slider_caption_text_color }}; opacity: 0;">
      {% if section.settings.title != blank %}
        <h2>{{ section.settings.title }}</h2>
      {% endif %}
    </div>
  </div>
</div>



