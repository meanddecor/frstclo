{% comment %}
✅ GLOBAL SETTINGS APPLIED:
- Colors: color_primary, color_secondary, color_background, color_text, color_button, color_button_text, color_accent, color_success, color_error
- Typography: type_header_font, type_body_font, font_size_base, font_weight_heading, line_height
- Layout: page_width, spacing_sections
- Buttons: button_style, button_radius, button_padding_horizontal, button_padding_vertical, button_uppercase, button_shadow
- Inputs: input_style, input_radius, input_height
- Media: media_border_radius, media_shadow, image_lazy_loading
- Badges: badge_style, badge_position, show_sale_badge, badge_color_sale
- Cart: cart_type
- Theme Style: enable_animations, animation_speed
{% endcomment %}

<section
  id="MainProduct-{{ section.id }}"
  class="product-page-optimized"
  data-section="{{ section.id }}"
  style="
    --color-bg: {{ settings.color_background }};
    --color-text: {{ settings.color_text }};
    --color-primary: {{ settings.color_primary }};
    --color-accent: {{ settings.color_accent }};
    --page-width: {{ settings.page_width }}px;
    --spacing-section: {{ settings.spacing_sections }}px;
    --button-radius: {{ settings.button_radius }}px;
    --media-radius: {{ settings.media_border_radius }}px;
    --animation-speed: {{ settings.animation_speed | default: 0.3 }}s;
  "
>
  {{ 'section-main-product.css' | asset_url | stylesheet_tag }}
  {{ 'component-accordion.css' | asset_url | stylesheet_tag }}
  {{ 'component-price.css' | asset_url | stylesheet_tag }}
  {{ 'component-rte.css' | asset_url | stylesheet_tag }}
  {{ 'component-slider.css' | asset_url | stylesheet_tag }}
  {{ 'component-rating.css' | asset_url | stylesheet_tag }}
  {{ 'component-loading-overlay.css' | asset_url | stylesheet_tag }}
  {{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}

  {%- style -%}
    .product-page-optimized {
      background: {{ settings.color_background }};
      padding: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px 20px {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
      max-width: {{ settings.page_width }}px;
      margin: 0 auto;
    }

    @media screen and (min-width: 750px) {
      .product-page-optimized {
        padding: {{ section.settings.padding_top }}px 40px {{ section.settings.padding_bottom }}px;
      }
    }

    .product-page-optimized .product-grid-conversion {
      display: grid;
      grid-template-columns: 1fr;
      gap: 30px;
    }

    @media screen and (min-width: 990px) {
      .product-page-optimized .product-grid-conversion {
        grid-template-columns: {% if section.settings.media_position == 'right' %}1fr 1.2fr{% else %}1.2fr 1fr{% endif %};
        gap: 60px;
      }
    }

    /* Conversion-optimized sticky buy box */
    .product-buybox-sticky {
      position: sticky;
      top: 100px;
      background: {{ settings.color_background }};
      border-radius: {{ settings.card_radius | default: 12 }}px;
      padding: 30px;
      box-shadow: {{ settings.card_shadow_opacity | default: 0.1 | times: 1 | prepend: '0 4px 20px rgba(0,0,0,' | append: ')' }};
    }

    .product-title-conversion {
      /* Styles moved inline to allow block-level customization */
    }

    .product-vendor-badge {
      display: inline-block;
      background: {{ settings.color_accent | default: '#f5f5f5' }};
      color: {{ settings.color_text }};
      padding: 6px 14px;
      border-radius: {% if settings.badge_style == 'rounded' %}20px{% else %}4px{% endif %};
      font-size: 13px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 12px;
    }

    .product-price-conversion {
      /* Styles moved inline to allow block-level customization */
    }

    .product-trust-badges {
      display: flex;
      flex-wrap: wrap;
      gap: 16px;
      margin: 24px 0;
      padding: 20px;
      background: #f0f9f4;
      border: 1px solid {{ settings.color_success | default: '#4caf50' }}22;
      border-radius: {{ settings.button_radius | default: 8 }}px;
    }

    .trust-badge-item {
      display: flex;
      align-items: center;
      gap: 8px;
      font-size: 14px;
      color: {{ settings.color_text }};
    }

    .trust-badge-icon {
      width: 20px;
      height: 20px;
      color: {{ settings.color_success | default: '#4caf50' }};
    }

    .product-cta-primary {
      width: 100%;
      padding: {{ settings.button_padding_vertical | default: 16 }}px {{ settings.button_padding_horizontal | default: 32 }}px;
      background: {{ settings.color_button }};
      color: {{ settings.color_button_text }};
      border: none;
      border-radius: {{ settings.button_radius | default: 8 }}px;
      font-size: 18px;
      font-weight: 700;
      cursor: pointer;
      transition: all {{ settings.animation_speed | default: 0.3 }}s ease;
      text-transform: {% if settings.button_uppercase %}uppercase{% else %}none{% endif %};
      box-shadow: {% if settings.button_shadow %}0 4px 12px rgba(0,0,0,0.15){% else %}none{% endif %};
      margin: 16px 0;
    }

    .product-cta-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(0,0,0,0.2);
    }

    .product-cta-secondary {
      width: 100%;
      padding: {{ settings.button_padding_vertical | default: 16 }}px {{ settings.button_padding_horizontal | default: 32 }}px;
      background: transparent;
      color: {{ settings.color_button }};
      border: 2px solid {{ settings.color_button }};
      border-radius: {{ settings.button_radius | default: 8 }}px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: all {{ settings.animation_speed | default: 0.3 }}s ease;
      margin: 8px 0;
    }

    .product-urgency-bar {
      background: linear-gradient(90deg, {{ settings.color_error | default: '#ff6b6b' }} 0%, transparent 100%);
      padding: 12px 16px;
      border-radius: {{ settings.button_radius | default: 8 }}px;
      margin: 16px 0;
      display: flex;
      align-items: center;
      gap: 10px;
      animation: pulse 2s ease-in-out infinite;
    }

    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.85; }
    }

    .product-accordion-conversion {
      border-top: 1px solid #eee;
      margin-top: 24px;
    }

    .product-accordion-item {
      border-bottom: 1px solid #eee;
    }

    .product-accordion-header {
      width: 100%;
      padding: 20px 0;
      background: none;
      border: none;
      text-align: left;
      font-size: 16px;
      font-weight: 600;
      color: {{ settings.color_text }};
      cursor: pointer;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .product-accordion-content {
      padding: 0 0 20px 0;
      color: {{ settings.color_text }};
      line-height: 1.6;
    }

    .product-gallery-conversion {
      position: relative;
    }

    .product-gallery-conversion img {
      width: 100%;
      border-radius: {{ settings.media_border_radius | default: 12 }}px;
      {% if settings.image_lazy_loading %}loading: lazy;{% endif %}
    }

    .product-social-proof {
      background: #f9f9f9;
      border-left: 4px solid {{ settings.color_success | default: '#4caf50' }};
      padding: 16px;
      margin: 20px 0;
      border-radius: 8px;
    }

    .quantity-selector-conversion {
      display: flex;
      align-items: center;
      gap: 12px;
      margin: 20px 0;
    }

    .quantity-btn {
      width: 44px;
      height: 44px;
      border: 2px solid {{ settings.color_text }}22;
      background: white;
      border-radius: {{ settings.input_radius | default: 8 }}px;
      cursor: pointer;
      font-size: 20px;
      font-weight: bold;
      transition: all 0.2s;
    }

    .quantity-btn:hover {
      background: {{ settings.color_primary }}11;
      border-color: {{ settings.color_primary }};
    }

    .quantity-input-conversion {
      width: 60px;
      height: {{ settings.input_height | default: 44 }}px;
      text-align: center;
      border: 2px solid {{ settings.color_text }}22;
      border-radius: {{ settings.input_radius | default: 8 }}px;
      font-size: 16px;
      font-weight: 600;
    }

    .variant-selector-pills {
      margin: 20px 0;
    }

    .variant-pills-container {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      margin-top: 10px;
    }

    .variant-pill {
      padding: 10px 20px;
      border: 2px solid {{ settings.color_text }}22;
      border-radius: {% if settings.variant_pill_style == 'rounded' %}28px{% else %}8px{% endif %};
      background: white;
      cursor: pointer;
      transition: all 0.2s;
      font-weight: 500;
    }

    .variant-pill:hover,
    .variant-pill.selected {
      border-color: {{ settings.color_primary }};
      background: {{ settings.color_primary }}11;
      color: {{ settings.color_primary }};
    }

    .variant-pill.sold-out {
      opacity: 0.4;
      cursor: not-allowed;
      position: relative;
    }

    .variant-pill.sold-out::after {
      content: '';
      position: absolute;
      top: 50%;
      left: 0;
      right: 0;
      height: 2px;
      background: #999;
      transform: translateY(-50%);
    }
  {%- endstyle -%}

  <script src="{{ 'product-info.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
  {% if section.settings.image_zoom == 'hover' %}
    <script id="EnableZoomOnHover-main" src="{{ 'magnify.js' | asset_url }}" defer="defer"></script>
  {% endif %}
  {%- if request.design_mode -%}
    <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
  {%- endif -%}

  {%- assign first_3d_model = product.media | where: 'media_type', 'model' | first -%}
  {%- if first_3d_model -%}
    {{ 'component-product-model.css' | asset_url | stylesheet_tag }}
    <link
      id="ModelViewerStyle"
      rel="stylesheet"
      href="https://cdn.shopify.com/shopifycloud/model-viewer-ui/assets/v1.0/model-viewer-ui.css"
      media="print"
      onload="this.media='all'"
    >
    <link
      id="ModelViewerOverride"
      rel="stylesheet"
      href="{{ 'component-model-viewer-ui.css' | asset_url }}"
      media="print"
      onload="this.media='all'"
    >
  {%- endif -%}

  {% assign variant_images = product.images | where: 'attached_to_variant?', true | map: 'src' %}
  {%- assign product_form_id = 'product-form-' | append: section.id -%}

  <div class="product-grid-conversion">
    <!-- PRODUCT GALLERY - LEFT/RIGHT BASED ON SETTINGS -->
    <div class="product-gallery-conversion" {% if section.settings.media_position == 'right' %}style="order: 2;"{% endif %}>
      {% render 'product-media-gallery', variant_images: variant_images %}
    </div>

    <!-- CONVERSION-OPTIMIZED BUY BOX -->
    <div class="product-buybox-sticky" {% if section.settings.media_position == 'right' %}style="order: 1;"{% endif %}>
      <product-info
        id="ProductInfo-{{ section.id }}"
        data-section="{{ section.id }}"
        data-url="{{ product.url }}"
      >
        {%- for block in section.blocks -%}
          {%- case block.type -%}

            {%- when '@app' -%}
              <div {{ block.shopify_attributes }}>
                {% render block %}
              </div>

            {%- when 'vendor' -%}
              {%- if product.vendor != blank -%}
                <span class="product-vendor-badge" {{ block.shopify_attributes }}>
                  {{ product.vendor }}
                </span>
              {%- endif -%}

            {%- when 'title' -%}
              <h1 class="product-title-conversion" {{ block.shopify_attributes }} style="
                color: {{ block.settings.title_color | default: settings.color_text }} !important;
                font-family: {{ block.settings.title_font.family | default: settings.type_header_font.family }}, {{ block.settings.title_font.fallback_families | default: settings.type_header_font.fallback_families }} !important;
                font-weight: {{ block.settings.title_font.weight | default: settings.font_weight_heading }} !important;
                font-style: {{ block.settings.title_font.style }} !important;
                font-size: {{ block.settings.title_font_size_mobile | default: 24 }}px !important;
                letter-spacing: {{ block.settings.title_letter_spacing | default: 0 }}px !important;
                line-height: {{ block.settings.title_line_height | default: 1.2 }} !important;
                margin: 0 0 16px 0 !important;
              ">
                {{ product.title | escape }}
              </h1>
              <style>
                @media screen and (min-width: 750px) {
                  #shopify-section-{{ section.id }} .product-title-conversion {
                    font-size: {{ block.settings.title_font_size | default: 36 }}px !important;
                  }
                }
              </style>

            {%- when 'rating' -%}
              {%- if product.metafields.reviews.rating.value != blank -%}
                <div class="product-rating-conversion" {{ block.shopify_attributes }} style="margin: 12px 0;">
                  {% liquid
                    assign rating_decimal = 0
                    assign decimal = product.metafields.reviews.rating.value.rating | modulo: 1
                    if decimal >= 0.3 and decimal <= 0.7
                      assign rating_decimal = 0.5
                    elsif decimal > 0.7
                      assign rating_decimal = 1
                    endif
                  %}
                  <div class="rating" role="img" aria-label="{{ 'accessibility.star_reviews_info' | t: rating_value: product.metafields.reviews.rating.value, rating_max: product.metafields.reviews.rating.value.scale_max }}" style="display: flex; align-items: center; gap: 8px;">
                    <span aria-hidden="true" class="rating-star" style="--rating: {{ product.metafields.reviews.rating.value.rating | floor }}; --rating-max: {{ product.metafields.reviews.rating.value.scale_max }}; --rating-decimal: {{ rating_decimal }}; color: {{ settings.color_accent | default: '#FFB800' }};"></span>
                    <span style="font-weight: 600;">{{ product.metafields.reviews.rating.value }}</span>
                    <span style="color: #999;">({{ product.metafields.reviews.rating_count }} reviews)</span>
                  </div>
                </div>
              {%- endif -%}

            {%- when 'price' -%}
              <div class="product-price-conversion" id="price-{{ section.id }}" role="status" {{ block.shopify_attributes }} style="
                color: {{ block.settings.price_color | default: settings.color_primary }} !important;
                font-size: {{ block.settings.price_font_size | default: 32 }}px !important;
                font-weight: 700 !important;
                margin: 20px 0 !important;
                display: flex !important;
                align-items: center !important;
                gap: 12px !important;
              ">
                <span class="current-price" style="color: inherit;">{{ product.selected_or_first_available_variant.price | money }}</span>
                {%- if product.selected_or_first_available_variant.compare_at_price > product.selected_or_first_available_variant.price -%}
                  <span class="product-price-compare" style="font-size: {{ block.settings.price_font_size | default: 32 | times: 0.625 }}px !important; color: #999 !important; text-decoration: line-through !important;">{{ product.selected_or_first_available_variant.compare_at_price | money }}</span>
                  {%- assign savings = product.selected_or_first_available_variant.compare_at_price | minus: product.selected_or_first_available_variant.price -%}
                  {%- assign savings_percent = savings | times: 100.0 | divided_by: product.selected_or_first_available_variant.compare_at_price | round -%}
                  <span class="product-price-save" style="background: {{ settings.badge_color_sale | default: '#ff4444' }} !important; color: white !important; padding: 4px 10px !important; border-radius: {{ settings.button_radius | default: 8 }}px !important; font-size: 14px !important; font-weight: 600 !important;">Save {{ savings_percent }}%</span>
                {%- endif -%}
              </div>
              {%- if shop.taxes_included or shop.shipping_policy.body != blank -%}
                <div style="font-size: 13px; color: #666; margin-top: -12px; margin-bottom: 16px;">
                  {%- if shop.taxes_included -%}
                    {{ 'products.product.include_taxes' | t }}
                  {%- endif -%}
                  {%- if shop.shipping_policy.body != blank -%}
                    <br>{{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
                  {%- endif -%}
                </div>
              {%- endif -%}

            {%- when 'short_description' -%}
              {%- if block.settings.description != blank -%}
                <div class="product-short-description" {{ block.shopify_attributes }} style="
                  color: {{ block.settings.desc_color | default: settings.color_text }} !important;
                  font-family: {{ block.settings.desc_font.family | default: settings.type_body_font.family }}, {{ block.settings.desc_font.fallback_families | default: settings.type_body_font.fallback_families }} !important;
                  font-weight: {{ block.settings.desc_font.weight }} !important;
                  font-style: {{ block.settings.desc_font.style }} !important;
                  font-size: {{ block.settings.desc_font_size | default: 16 }}px !important;
                  letter-spacing: {{ block.settings.desc_letter_spacing | default: 0 }}px !important;
                  line-height: {{ block.settings.desc_line_height | default: 1.6 }} !important;
                  margin: 20px 0 !important;
                ">
                  {{ block.settings.description }}
                </div>
              {%- endif -%}

            {%- when 'inventory' -%}
              <p class="product-inventory-status no-js-hidden" id="Inventory-{{ section.id }}" role="status" {{ block.shopify_attributes }} style="margin: 16px 0;">
                {%- if product.selected_or_first_available_variant.inventory_management == 'shopify' -%}
                  {%- if product.selected_or_first_available_variant.inventory_quantity > 0 -%}
                    {%- if product.selected_or_first_available_variant.inventory_quantity <= block.settings.inventory_threshold -%}
                      <span style="color: {{ settings.color_error | default: '#ff6b6b' }}; font-weight: 600;">
                        ⚠️ Only {{ product.selected_or_first_available_variant.inventory_quantity }} left in stock!
                      </span>
                    {%- else -%}
                      <span style="color: {{ settings.color_success | default: '#4caf50' }}; font-weight: 600;">
                        ✓ In Stock - Ready to Ship
                      </span>
                    {%- endif -%}
                  {%- else -%}
                    <span style="color: #999;">Out of Stock</span>
                  {%- endif -%}
                {%- endif -%}
              </p>

            {%- when 'variant_picker' -%}
              <style>
                #shopify-section-{{ section.id }} .variant-selector-pills,
                #shopify-section-{{ section.id }} fieldset {
                  font-family: {{ block.settings.variant_font.family | default: settings.type_body_font.family }}, {{ block.settings.variant_font.fallback_families | default: settings.type_body_font.fallback_families }} !important;
                  font-size: {{ block.settings.variant_font_size | default: 16 }}px !important;
                  color: {{ block.settings.variant_text_color | default: settings.color_text }} !important;
                }
                #shopify-section-{{ section.id }} .variant-pill.selected,
                #shopify-section-{{ section.id }} .product-form__input input[type="radio"]:checked + label {
                  color: {{ block.settings.variant_selected_color | default: settings.color_primary }} !important;
                  border-color: {{ block.settings.variant_selected_color | default: settings.color_primary }} !important;
                }
              </style>
              {% render 'product-variant-picker', product: product, block: block, product_form_id: product_form_id %}

            {%- when 'quantity_selector' -%}
              <div class="quantity-selector-conversion" id="Quantity-Form-{{ section.id }}" {{ block.shopify_attributes }}>
                <label style="
                  font-family: {{ block.settings.quantity_font.family | default: settings.type_body_font.family }}, {{ block.settings.quantity_font.fallback_families | default: settings.type_body_font.fallback_families }} !important;
                  font-size: {{ block.settings.quantity_font_size | default: 16 }}px !important;
                  color: {{ block.settings.quantity_text_color | default: settings.color_text }} !important;
                  font-weight: 600 !important;
                  display: block !important;
                  margin-bottom: 8px !important;
                ">
                  Quantity:
                </label>
                <div style="display: flex; align-items: center; gap: 12px;">
                  <button class="quantity-btn" type="button" onclick="this.nextElementSibling.stepDown()">−</button>
                  <input 
                    class="quantity-input-conversion"
                    type="number"
                    name="quantity"
                    id="Quantity-{{ section.id }}"
                    min="{{ product.selected_or_first_available_variant.quantity_rule.min }}"
                    {% if product.selected_or_first_available_variant.quantity_rule.max != null %}
                      max="{{ product.selected_or_first_available_variant.quantity_rule.max }}"
                    {% endif %}
                    step="{{ product.selected_or_first_available_variant.quantity_rule.increment }}"
                    value="{{ product.selected_or_first_available_variant.quantity_rule.min }}"
                    form="{{ product_form_id }}"
                    style="
                      font-family: {{ block.settings.quantity_font.family | default: settings.type_body_font.family }}, {{ block.settings.quantity_font.fallback_families | default: settings.type_body_font.fallback_families }} !important;
                      font-size: {{ block.settings.quantity_font_size | default: 16 }}px !important;
                      color: {{ block.settings.quantity_text_color | default: settings.color_text }} !important;
                    "
                  />
                  <button class="quantity-btn" type="button" onclick="this.previousElementSibling.stepUp()">+</button>
                </div>
              </div>

            {%- when 'buy_buttons' -%}
              <style>
                #shopify-section-{{ section.id }} .product-form__submit,
                #shopify-section-{{ section.id }} .shopify-payment-button__button {
                  font-family: {{ block.settings.button_font.family | default: settings.type_body_font.family }}, {{ block.settings.button_font.fallback_families | default: settings.type_body_font.fallback_families }} !important;
                  font-size: {{ block.settings.button_font_size | default: 18 }}px !important;
                  color: {{ block.settings.button_text_color | default: settings.color_button_text }} !important;
                  background: {{ block.settings.button_bg_color | default: settings.color_button }} !important;
                }
              </style>
              {%- render 'buy-buttons', block: block, product: product, product_form_id: product_form_id, section_id: section.id, show_pickup_availability: true -%}

            {%- when 'trust_badges' -%}
              {%- if block.settings.show_trust_badges -%}
                <div class="product-trust-badges" {{ block.shopify_attributes }}>
                  <div class="trust-badge-item">
                    <svg class="trust-badge-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span>Free Shipping Over $50</span>
                  </div>
                  <div class="trust-badge-item">
                    <svg class="trust-badge-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span>Secure Checkout</span>
                  </div>
                  <div class="trust-badge-item">
                    <svg class="trust-badge-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                    </svg>
                    <span>30-Day Returns</span>
                  </div>
                </div>
              {%- endif -%}

            {%- when 'text' -%}
              <div class="product-custom-text" {{ block.shopify_attributes }} style="
                color: {{ block.settings.text_color | default: settings.color_text }} !important;
                font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }} !important;
                font-weight: {{ block.settings.text_font.weight }} !important;
                font-style: {% if block.settings.text_italic %}italic{% else %}{{ block.settings.text_font.style }}{% endif %} !important;
                font-size: {{ block.settings.text_font_size | default: 16 }}px !important;
                letter-spacing: {{ block.settings.text_letter_spacing | default: 0 }}px !important;
                line-height: {{ block.settings.text_line_height | default: 1.5 }} !important;
                text-decoration: {% if block.settings.text_underline and block.settings.text_strikethrough %}underline line-through{% elsif block.settings.text_underline %}underline{% elsif block.settings.text_strikethrough %}line-through{% else %}none{% endif %} !important;
                margin: 16px 0 !important;
