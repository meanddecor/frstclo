      "label": "Show social media links",
      "default": true,
      "info": "Social links are pulled from global settings (Social Media section)"
    },
    {
      "type": "text",
      "id": "instagram_link",
      "label": "Instagram URL",
      "default": "https://www.instagram.com/",
      "info": "Or leave empty to use global social media settings"
    },
    {
      "type": "text",
      "id": "youtube_link",
      "label": "YouTube URL",
      "info": "Or leave empty to use global social media settings"
    },
    {
      "type": "text",
      "id": "tiktok_link",
      "label": "TikTok URL",
      "info": "Or leave empty to use global social media settings"
    },
    {
      "type": "text",
      "id": "facebook_link",
      "label": "Facebook URL",
      "info": "Or leave empty to use global social media settings"
    },
    {
      "type": "text",
      "id": "twitter_link",
      "label": "Twitter URL",
      "info": "Or leave empty to use global social media settings"
    },
    {
      "type": "text",
      "id": "pinterest_link",
      "label": "Pinterest URL",
      "info": "Or leave empty to use global social media settings"
    },
    {
      "type": "header",
      "content": "Copyright Text"
    },
    {
      "type": "checkbox",
      "id": "show_copyright",
      "label": "Show copyright text",
      "default": true
    },
    {
      "type": "richtext",
