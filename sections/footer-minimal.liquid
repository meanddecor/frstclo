{
  "name": "Footer Minimal",
  "settings": [
    {
      "type": "header",
      "content": "Footer Navigation Links"
    },
    {
      "type": "checkbox",
      "id": "show_footer_nav",
      "label": "Show footer navigation",
      "default": true
    },
    {
