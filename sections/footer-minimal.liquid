      "default": "<p><a href=\"https://eyecey.com\">SITE BY EYECEY</a></p>",
      "info": "Additional text below copyright (e.g., designer credit)"
    },
    {
      "type": "header",
      "content": "Big Logo/Image"
    },
    {
      "type": "checkbox",
      "id": "show_big_logo",
      "label": "Show big logo/image",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "big_logo",
      "label": "Big logo/image",
      "info": "Large image or logo displayed at bottom of footer"
    },
    {
      "type": "range",
      "id": "image_width",
      "label": "Image width",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100,
      "info": "Width as percentage of container"
    },
    {
      "type": "checkbox",
      "id": "image_height_auto",
