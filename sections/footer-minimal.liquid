{%- liquid
  assign footer_bg_color = section.settings.background_color | default: settings.color_background
  assign footer_text_color = section.settings.text_color | default: settings.color_text
  assign link_color = section.settings.link_color | default: settings.color_text
  assign link_hover_color = section.settings.link_hover_color | default: settings.color_primary
  assign icon_color = section.settings.icon_color | default: settings.color_text
  assign icon_hover_color = section.settings.icon_hover_color | default: settings.color_primary
  assign copyright_color = section.settings.copyright_color | default: footer_text_color
  assign font_family = settings.type_body_font.family | default: 'inherit'
-%}

<style>
  .footer-minimal-{{ section.id }} {
    background: {{ footer_bg_color }};
    color: {{ footer_text_color }};
    font-family: {{ font_family }}, sans-serif;
    margin-top: {{ section.settings.section_margin_top }}px;
    margin-bottom: {{ section.settings.section_margin_bottom }}px;
  }

  .footer-minimal-{{ section.id }} .footer-nav {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: {{ section.settings.nav_margin_bottom }}px;
    margin-top: {{ section.settings.nav_margin_top }}px;
  }

  .footer-minimal-{{ section.id }} .footer-nav a {
    font-size: {{ section.settings.nav_font_size_desktop }}px;
    color: {{ link_color }};
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-minimal-{{ section.id }} .footer-nav a:hover {
    color: {{ link_hover_color }};
  }

  .footer-minimal-{{ section.id }} .list-payment {
    filter: inherit;
    list-style: none;
    display: flex;
    flex-direction: row;
    justify-content: center;
    padding-top: {{ section.settings.payment_padding_top }}px;
    margin: 0;
    padding-left: 0;
  }

  .footer-minimal-{{ section.id }} li.list-payment__item {
    align-items: center;
    display: flex;
    padding: 0.5rem;
  }

  .footer-minimal-{{ section.id }} ul.list-unstyled.list-social {
    display: flex;
    flex-wrap: wrap;
    list-style: none;
    justify-content: center;
    margin: 0;
    padding: 0;
  }

  .footer-minimal-{{ section.id }} a.link.list-social__link {
    align-items: center;
    display: flex;
    padding: {{ section.settings.social_icon_padding }}px;
    transition: all 0.2s ease;
  }

  .footer-minimal-{{ section.id }} .list-social__link .icon {
    height: {{ section.settings.social_icon_size }}px;
    width: {{ section.settings.social_icon_size }}px;
  }

  .footer-minimal-{{ section.id }} .list-social__link .icon path {
    fill: {{ icon_color }};
    transition: fill 0.2s ease;
  }

  .footer-minimal-{{ section.id }} a.link.list-social__link:hover .icon path {
    fill: {{ icon_hover_color }};
  }

  .footer-minimal-{{ section.id }} .footer-info {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .footer-minimal-{{ section.id }} .footer__big-logo {
    margin-top: {{ section.settings.logo_margin_top }}px;
  }

  .footer-minimal-{{ section.id }} .footer__big-logo img {
    width: 100%;
    vertical-align: top;
  }

  .footer-minimal-{{ section.id }} .site-copy {
    width: 1px;
    height: 1px;
    opacity: 0;
    padding: 0;
    margin: 0 !important;
    overflow: hidden;
  }

  .footer-minimal-{{ section.id }} .copyright {
    text-align: center;
    padding-top: 0 !important;
  }

  .footer-minimal-{{ section.id }} .copyright small {
    margin: {{ section.settings.copyright_margin }}px 0;
    display: block;
    color: {{ copyright_color }};
  }

  .footer-minimal-{{ section.id }} .copyright a {
    color: {{ copyright_color }};
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .footer-minimal-{{ section.id }} .copyright a:hover {
    opacity: 0.7;
  }

  .footer-minimal-{{ section.id }} .eyecey {
    {% if section.settings.show_credit %}
    margin: {{ section.settings.credit_margin }}px 0 {{ section.settings.credit_margin_bottom }}px;
    {% else %}
    width: 1px;
    height: 1px;
    opacity: 0;
    padding: 0;
    margin: 0;
    overflow: hidden;
    {% endif %}
  }

  @media screen and (max-width: 749px) {
    .footer-minimal-{{ section.id }} .footer-nav {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-bottom: 1rem;
      margin-top: 0.6rem;
    }

    .footer-minimal-{{ section.id }} .footer-nav a {
      font-size: {{ section.settings.nav_font_size_mobile }}px;
    }

    .footer-minimal-{{ section.id }} .footer-nav a:not(:last-child) {
      margin-bottom: {{ section.settings.nav_link_spacing_mobile }}px;
    }

    .footer-minimal-{{ section.id }} .footer-info {
      flex-direction: column;
    }

    .footer-minimal-{{ section.id }} .footer__big-logo {
      margin-top: {{ section.settings.logo_margin_top_mobile }}px;
    }
  }

  @media screen and (min-width: 750px) {
    .footer-minimal-{{ section.id }} .footer-nav a:not(:last-child) {
      margin-right: {{ section.settings.nav_link_spacing_desktop }}px;
    }
  }
</style>

