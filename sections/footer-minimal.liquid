</div>



{% if section.settings.show_copyright %}
  <div class="copyright">
    {% if section.settings.copyright_text != blank %}
      <div class="copyright__content copyright__primary">
        {{ section.settings.copyright_text }}
      </div>
    {% endif %}
    {% if section.settings.secondary_text != blank %}
      <div class="copyright__content copyright__secondary">
        {{ section.settings.secondary_text }}
      </div>
    {% endif %}
  </div>
{% endif %}

<div class="footer__big-logo">
  {% if section.settings.show_big_logo and section.settings.big_logo %}
    <img src="{{ section.settings.big_logo | image_url: width: 2000 }}" 
         alt="{{ section.settings.big_logo.alt | default: shop.name }}"
         loading="{% if settings.image_lazy_loading %}lazy{% else %}eager{% endif %}">
  {% endif %}
</div>


</div>

