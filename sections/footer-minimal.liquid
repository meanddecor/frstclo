{% comment %}
✅ GLOBAL SETTINGS APPLIED:
- Social Media: social_instagram_link, social_youtube_link, social_tiktok_link, social_facebook_link, social_twitter_link, social_pinterest_link
- Media: image_lazy_loading, media_fit (object-fit for images)
- Layout: page_width (via page-width class)
- Typography: Custom font picker for section text styling
- Colors: Section-level color controls
{% endcomment %}

<style>
  {{ section.settings.text_font | font_face: font_display: 'swap' }}
</style>

<div id="shopify-section-footer" class="shopify-section"><style>
  .footer-nav {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 0.5rem;
    margin-top: 0.6rem;
  }
  .footer-nav a{
    font-size: {{ section.settings.text_size }}px;
    color: {{ section.settings.text_color }} !important;
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    line-height: {{ section.settings.text_line_spacing }};
    letter-spacing: {{ section.settings.text_letter_spacing }}px;
    text-transform: {{ section.settings.text_transform }};
    text-decoration: {% if section.settings.text_underline %}underline{% else %}none{% endif %};
    font-style: {% if section.settings.text_italic %}italic{% else %}normal{% endif %};
  }
  
  .footer-nav a:hover {
    opacity: 0.7;
  }

  .eyecey{
    margin: 5px 0 16px;
  }
  .list-payment {
    
    filter: inherit;
    
    list-style: none;
    display: flex;
    flex-direction: row;
    justify-content: center;
    padding-top: 20px;
  }
  li.list-payment__item {
    align-items: center;
    display: flex;
    padding: 0.5rem;
  }
  ul.list-unstyled.list-social {
    display: flex;
    flex-wrap: wrap;
    list-style: none;
  }
  a.link.list-social__link {
    align-items: center;
    display: flex;
    padding: {{ section.settings.icon_spacing }}px;
  }
  .list-social__link .icon {
    height: {{ section.settings.icon_size }}px;
    width: {{ section.settings.icon_size }}px;
    color: {{ section.settings.icon_color }};
  }
  .footer-info{
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: {{ section.settings.nav_social_width }}%;
    max-width: 100%;
    margin-left: auto;
    margin-right: auto;
    padding-left: {{ section.settings.nav_social_padding_horizontal }}px;
    padding-right: {{ section.settings.nav_social_padding_horizontal }}px;
  }
  .footer__big-logo{
    margin-top: {{ section.settings.big_logo_margin_top }}px;
    text-align: center;
    width: {{ section.settings.logo_width }}%;
    max-width: 100%;
    margin-left: auto;
    margin-right: auto;
    padding-left: {{ section.settings.logo_padding_horizontal }}px;
    padding-right: {{ section.settings.logo_padding_horizontal }}px;
  }
  
  .footer__big-logo img {
    width: {{ section.settings.image_width }}%;
    max-width: 100%;
    vertical-align: top;
    object-fit: {{ section.settings.image_object_fit }};
    height: {% if section.settings.image_height_auto %}auto{% else %}{{ section.settings.image_height }}px{% endif %};
    display: block;
    margin: 0 auto;
  }
  
  .copyright{
    padding-top: 20px;
    padding-bottom: 10px;
    text-align: center;
    display: block;
    width: {{ section.settings.copyright_width }}%;
    max-width: 100%;
    margin-left: auto;
    margin-right: auto;
    padding-left: {{ section.settings.copyright_padding_horizontal }}px;
    padding-right: {{ section.settings.copyright_padding_horizontal }}px;
  }
  
  .copyright__content {
    display: block;
    font-size: {{ section.settings.copyright_text_size }}px;
    color: {{ section.settings.copyright_text_color }} !important;
    margin: 9px auto;
    line-height: 1.6;
  }
  
  .copyright__content * {
    color: {{ section.settings.copyright_text_color }} !important;
    font-size: inherit !important;
  }
  
  .copyright__content a {
    text-decoration: underline;
  }
  
  .copyright__content a:hover {
    opacity: 0.8;
  }
  
  #shopify-section-footer{
    margin-top: {{ section.settings.section_margin_top }}px;
    margin-bottom: 0px;
    background-color: {{ section.settings.background_color }};
    {% if section.settings.enable_border_top %}
      border-top: {{ section.settings.border_width }}px {{ section.settings.border_style }} {{ section.settings.border_color }};
    {% endif %}
    {% if section.settings.enable_border_bottom %}
      border-bottom: {{ section.settings.border_width }}px {{ section.settings.border_style }} {{ section.settings.border_color }};
    {% endif %}
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
  }
  @media screen and (max-width: 749px){
  .footer-nav {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 1rem;
    margin-top: 0.6rem;
  }
  .footer-nav a{
    font-size: {{ section.settings.text_size | times: 1.4 }}px;
  }
  .footer-nav a:not(:last-child) {
    margin-bottom: 0.5rem;
  }
    .footer-info {
      flex-direction: column;
  }
    .footer__big-logo{
      margin-top: 30px;
    }
  }
  @media screen and (min-width: 750px){
  .footer-nav a:not(:last-child) {
    margin-right: 0.7rem;
  }
  }
